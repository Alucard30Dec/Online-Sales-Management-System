@using System.Globalization
@model OnlineSalesManagementSystem.Domain.Entities.Product
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content"><h1 class="page-title">Chi tiết sản phẩm</h1></div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a href="/"><i class="lni lni-home"></i> Trang chủ</a></li>
                    <li><a href="/Product">Sản phẩm</a></li>
                    <li>@Model.Name</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<section class="item-details section">
    <div class="container">
        <div class="top-area bg-white p-4 rounded shadow-sm">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="product-images">
                        <main id="gallery">
                            <div class="main-img border rounded p-3 text-center">
                                <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/assets/images/products/product-1.jpg" : Model.ImagePath)"
                                     id="current" alt="@Model.Name" class="img-fluid" style="max-height: 500px; object-fit: contain;">
                            </div>
                        </main>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="product-info ps-lg-4">
                        <h2 class="title fw-bold">@Model.Name</h2>
                        <div class="product-meta text-muted small mb-3">
                            <span class="me-3"><i class="lni lni-tag"></i> Danh mục: <a href="/Product?category=@Model.CategoryId" class="text-primary fw-bold text-decoration-none">@(Model.Category?.Name ?? "N/A")</a></span>
                            <span><i class="lni lni-star"></i> Thương hiệu: <a href="/Product?brand=@Model.BrandId" class="text-primary fw-bold text-decoration-none">@(Model.Brand?.Name ?? "N/A")</a></span>
                        </div>
                        <h3 class="price text-primary fw-bold mb-3 fs-2">@Model.SalePrice.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</h3>
                        <p class="info-text mb-4 text-secondary">Sản phẩm chính hãng, chất lượng cao.</p>
                        <div class="bottom-content">
                            <div class="row align-items-center">
                                <div class="col-lg-6 col-md-6 col-12 mb-3">
                                    <button class="btn btn-primary w-100 py-3 fw-bold text-uppercase @(Model.StockOnHand <= 0 ? "disabled" : "")">
                                        <i class="lni lni-cart me-2"></i> @(Model.StockOnHand > 0 ? "Thêm vào giỏ" : "Hết hàng")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>