@{
    ViewData["Title"] = "Home";
}

<!-- HERO AREA -->
<section class="hero-area">
    <div class="container">
        <div class="row">
            <!-- Slider trái -->
            <div class="col-lg-8 col-md-12 col-12">
                <div class="hero-slider">
                    <div class="single-slider"
                         style="background-image:url('/shopgrids/assets/images/hero/slider-bg-1.jpg');">
                        <div class="content">
                            <h4>No restocking fee (35$ saving)</h4>
                            <h1>M75 Sport Watch</h1>
                            <p>Demo sản phẩm cho hệ thống quản lý bán hàng.</p>
                            <div class="price">
                                <span>Now only</span>
                                <span class="amount">$320.99</span>
                            </div>
                            <a href="#" class="btn">Shop Now</a>
                        </div>
                    </div>

                    <div class="single-slider"
                         style="background-image:url('/shopgrids/assets/images/hero/slider-bg-2.jpg');">
                        <div class="content">
                            <h4>Big combo offer</h4>
                            <h1>CCTV Camera Set</h1>
                            <p>Gói camera an ninh demo.</p>
                            <a href="#" class="btn">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Banner phải -->
            <div class="col-lg-4 col-md-12 col-12">
                <div class="hero-small-banner">
                    <div class="content">
                        <h4>New line required</h4>
                        <h2>iPhone 12 Pro Max</h2>
                        <div class="price">$259.99</div>
                        <a href="#" class="btn btn-sm">Shop Now</a>
                    </div>
                    <div class="image">
                        <img src="~/shopgrids/assets/images/hero/iphone.png" alt="iPhone" />
                    </div>
                </div>

                <div class="hero-small-banner style2 mt-3">
                    <div class="content">
                        <h4>Weekly Sale!</h4>
                        <p>Saving up to 50% off all online store items this week.</p>
                        <a href="#" class="btn btn-outline-light btn-sm">Shop Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

