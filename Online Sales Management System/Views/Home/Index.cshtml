@{
    ViewData["Title"] = "Home";
}

<div class="hero p-4 p-lg-5 rounded-4 border bg-white shadow-sm">
    <div class="row align-items-center g-4">
        <div class="col-12 col-lg-7">
            <h1 class="display-6 fw-semibold mb-2">Online Sales Management System</h1>
            <p class="text-muted mb-4">
                Inventory, purchases, invoices, and admin permissions in one dashboard.
            </p>

            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-primary" href="/Admin/Auth/Login">Login to Admin</a>
                <a class="btn btn-outline-secondary" href="/Admin/Dashboard">Open Dashboard</a>
            </div>

            <div class="mt-4 small text-muted">
                Default admin: <span class="fw-semibold">admin@osms.local</span> / <span class="fw-semibold">Admin@12345</span>
            </div>
        </div>

        <div class="col-12 col-lg-5">
            <div class="p-4 rounded-4 bg-light border">
                <div class="fw-semibold mb-2">Included modules</div>
                <ul class="mb-0 text-muted">
                    <li>Dashboard KPIs + charts</li>
                    <li>Suppliers CRUD (permission-enforced)</li>
                    <li>Products, Purchases, Invoices (stock movements)</li>
                    <li>Reports, Attendance, Settings</li>
                </ul>
            </div>
        </div>
    </div>
</div>
