@model List<OnlineSalesManagementSystem.Domain.Entities.Attendance>
@{
    ViewData["Title"] = "Attendance";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string from = ViewBag.From as string ?? "";
    string to = ViewBag.To as string ?? "";
}

<div class="container-fluid">
    <div class="d-flex align-items-start justify-content-between gap-3 mb-3">
        <div>
            <h1 class="h3 mb-0">Attendance</h1>
            <div class="text-muted">View attendance records (up to latest 500 rows).</div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-primary" href="/Admin/Attendance/Mark">Mark attendance</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end mb-3">
                <div class="col-12 col-md-4 col-xl-3">
                    <label class="form-label small text-muted">From</label>
                    <input class="form-control" type="date" name="from" value="@from" />
                </div>
                <div class="col-12 col-md-4 col-xl-3">
                    <label class="form-label small text-muted">To</label>
                    <input class="form-control" type="date" name="to" value="@to" />
                </div>
                <div class="col-12 col-md-4 col-xl-3 d-flex gap-2">
                    <button class="btn btn-outline-primary w-100" type="submit">Filter</button>
                    <a class="btn btn-outline-secondary w-100" href="/Admin/Attendance">Reset</a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="table-light">
                            <th style="width:90px;">#</th>
                            <th style="width:160px;">Date</th>
                            <th>Employee</th>
                            <th style="width:160px;">Status</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">No records.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var a in Model)
                            {
                                string badge = a.Status switch
                                {
                                    OnlineSalesManagementSystem.Domain.Entities.AttendanceStatus.Present => "text-bg-success",
                                    OnlineSalesManagementSystem.Domain.Entities.AttendanceStatus.Absent => "text-bg-danger",
                                    OnlineSalesManagementSystem.Domain.Entities.AttendanceStatus.Late => "text-bg-warning",
                                    OnlineSalesManagementSystem.Domain.Entities.AttendanceStatus.Leave => "text-bg-info",
                                    _ => "text-bg-secondary"
                                };

                                <tr>
                                    <td>@a.Id</td>
                                    <td>@a.Date.ToString("yyyy-MM-dd")</td>
                                    <td class="fw-semibold">@a.Employee?.Name</td>
                                    <td><span class="badge @badge">@a.Status</span></td>
                                    <td class="text-muted">@a.Note</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="small text-muted mt-2">
                Use “Mark attendance” to set the status per employee for a selected date.
            </div>
        </div>
    </div>
</div>
