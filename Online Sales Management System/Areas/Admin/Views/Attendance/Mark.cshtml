@model OnlineSalesManagementSystem.Areas.Admin.Controllers.AttendanceController.AttendanceMarkVm
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Mark Daily Attendance";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1 text-dark">Mark Attendance</h1>
            <p class="text-muted small mb-0">Select date and update status for employees.</p>
        </div>
        <a class="btn btn-light border shadow-sm" href="/Admin/Attendance">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4">
            <form method="post" action="/Admin/Attendance/Mark">
                @Html.AntiForgeryToken()

                <div class="row align-items-end mb-4 bg-light p-3 rounded-3 mx-0">
                    <div class="col-md-4">
                        <label class="form-label fw-bold text-secondary text-uppercase small">Select Date</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-calendar-alt text-primary"></i></span>
                            <input class="form-control border-start-0 ps-0" type="date" name="Date" id="attendanceDate"
                                   value="@Model.Date.ToString("yyyy-MM-dd")" onchange="window.location.href='/Admin/Attendance/Mark?date='+this.value" />
                        </div>
                    </div>
                    <div class="col-md-8 text-md-end mt-3 mt-md-0">
                        <span class="text-muted small fst-italic me-3">
                            <i class="fas fa-info-circle me-1"></i>Changing date will reload the employee list.
                        </span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold m-0 text-primary">Employee List</h5>
                    @if (Model.Rows != null && Model.Rows.Count > 0)
                    {
                        <button type="button" class="btn btn-sm btn-outline-success fw-bold" onclick="setAllStatus('Present')">
                            <i class="fas fa-check-double me-1"></i>Set All "Present"
                        </button>
                    }
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle border-top">
                        <thead class="bg-white">
                            <tr>
                                <th class="text-secondary text-uppercase small fw-bold ps-3" style="width:50px;">#</th>
                                <th class="text-secondary text-uppercase small fw-bold">Employee Name</th>
                                <th class="text-secondary text-uppercase small fw-bold" style="width:200px;">Status</th>
                                <th class="text-secondary text-uppercase small fw-bold">Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Rows == null || Model.Rows.Count == 0)
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        <i class="fas fa-users-slash fa-2x mb-3 opacity-50"></i>
                                        <p>No active employees found to mark attendance.</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                for (int i = 0; i < Model.Rows.Count; i++)
                                {
                                    <tr>
                                        <td class="text-muted ps-3">@(i + 1)</td>
                                        <td>
                                            <div class="fw-bold text-dark">@Model.Rows[i].EmployeeName</div>
                                            <small class="text-muted">ID: @Model.Rows[i].EmployeeId</small>

                                            <input type="hidden" name="Rows[@i].EmployeeId" value="@Model.Rows[i].EmployeeId" />
                                            <input type="hidden" name="Rows[@i].EmployeeName" value="@Model.Rows[i].EmployeeName" />
                                        </td>
                                        <td>
                                            <select class="form-select status-select shadow-sm" name="Rows[@i].Status"
                                                    style="border-color: #dee2e6;">
                                                @foreach (var s in Enum.GetValues(typeof(AttendanceStatus)).Cast<AttendanceStatus>())
                                                {
                                                    var selected = (Model.Rows[i].Status == s) ? "selected" : null;
                                                    // Tô màu cho option để dễ nhìn
                                                    var colorStyle = s == AttendanceStatus.Present ? "color:green; font-weight:bold" :
                                                    (s == AttendanceStatus.Absent ? "color:red; font-weight:bold" : "");

                                                    <!option value="@s" selected="@selected" style="@colorStyle">@s</!option>
                                                    <option value="@s" selected="@selected">@s</option>
                                                }
                                            </select>
                                        </td>
                                        <td>
                                            <input class="form-control form-control-sm" name="Rows[@i].Note"
                                                   value="@Model.Rows[i].Note" placeholder="Add note..." />
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex gap-2 mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                        <i class="fas fa-save me-2"></i>Save Attendance
                    </button>
                    <a class="btn btn-light border px-4" href="/Admin/Attendance">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script hỗ trợ chọn nhanh tất cả trạng thái
        function setAllStatus(statusValue) {
            const selects = document.querySelectorAll('.status-select');
            selects.forEach(select => {
                select.value = statusValue;
            });
        }
    </script>
}