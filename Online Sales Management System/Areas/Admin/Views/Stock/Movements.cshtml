@model List<OnlineSalesManagementSystem.Domain.Entities.StockMovement>
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Stock Movements";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var products = ViewBag.Products as List<Product> ?? new();
    int? productId = ViewBag.ProductId as int?;
    string from = ViewBag.From as string ?? "";
    string to = ViewBag.To as string ?? "";

    int inTotal = Model.Where(m => m.Type == StockMovementType.In).Sum(m => m.Qty);
    int outTotal = Model.Where(m => m.Type == StockMovementType.Out).Sum(m => m.Qty);
    int adjTotal = Model.Where(m => m.Type == StockMovementType.Adjust).Sum(m => m.Qty);
}

<div class="container-fluid">
    <div class="d-flex align-items-start justify-content-between gap-3 mb-3">
        <div>
            <h1 class="h3 mb-0">Stock Movements</h1>
            <div class="text-muted">Ledger of stock changes (latest 1000 rows).</div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/Admin/Stock">Back to stock</a>
            <a class="btn btn-outline-warning" href="/Admin/Stock/Low">Low stock</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-12 col-md-4 col-xl-3">
                    <label class="form-label small text-muted">Product</label>
                    <select class="form-select" name="productId">
                        <option value="">All products</option>
                        @foreach (var p in products)
                        {
                            var selected = (productId.HasValue && productId.Value == p.Id) ? "selected" : null;
                            <option value="@p.Id" selected="@selected">@p.Name (@p.SKU)</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-4 col-xl-2">
                    <label class="form-label small text-muted">From</label>
                    <input class="form-control" type="date" name="from" value="@from" />
                </div>

                <div class="col-12 col-md-4 col-xl-2">
                    <label class="form-label small text-muted">To</label>
                    <input class="form-control" type="date" name="to" value="@to" />
                </div>

                <div class="col-12 col-xl-3 d-flex gap-2">
                    <button class="btn btn-outline-primary w-100" type="submit">Filter</button>
                    <a class="btn btn-outline-secondary w-100" href="/Admin/Stock/Movements">Reset</a>
                </div>

                <div class="col-12 col-xl-2 text-muted small">
                    In: <span class="fw-semibold">@inTotal</span> ·
                    Out: <span class="fw-semibold">@outTotal</span> ·
                    Adjust: <span class="fw-semibold">@adjTotal</span>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="table-light">
                            <th style="width:90px;">#</th>
                            <th style="width:180px;">Date</th>
                            <th>Product</th>
                            <th style="width:120px;">Type</th>
                            <th style="width:120px;">Qty</th>
                            <th style="width:140px;">Ref</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr><td colspan="7" class="text-center text-muted py-4">No movements found.</td></tr>
                        }
                        else
                        {
                            foreach (var m in Model)
                            {
                                string badge = m.Type switch
                                {
                                    StockMovementType.In => "text-bg-success",
                                    StockMovementType.Out => "text-bg-danger",
                                    _ => "text-bg-secondary"
                                };

                                <tr>
                                    <td>@m.Id</td>
                                    <td>@m.MovementDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="fw-semibold">@m.Product?.Name</td>
                                    <td><span class="badge @badge">@m.Type</span></td>
                                    <td>@m.Qty</td>
                                    <td class="text-muted">@m.RefType #@m.RefId</td>
                                    <td class="text-muted">@m.Note</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
