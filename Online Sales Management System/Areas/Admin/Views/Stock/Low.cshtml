@model List<OnlineSalesManagementSystem.Domain.Entities.Product>
@{
    ViewData["Title"] = "Low Stock";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string q = ViewBag.Query as string ?? "";
}

<div class="container-fluid">
    <div class="d-flex align-items-start justify-content-between gap-3 mb-3">
        <div>
            <h1 class="h3 mb-0">Low Stock</h1>
            <div class="text-muted">Products where StockOnHand ≤ ReorderLevel.</div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/Admin/Stock">Back to stock</a>
            <a class="btn btn-outline-secondary" href="/Admin/Stock/Movements">Movements</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end mb-3">
                <div class="col-12 col-md-7 col-xl-5">
                    <label class="form-label small text-muted">Search</label>
                    <input class="form-control" name="q" value="@q" placeholder="SKU or product name..." />
                </div>

                <div class="col-12 col-md-5 col-xl-3 d-flex gap-2">
                    <button class="btn btn-outline-primary w-100" type="submit">Search</button>
                    <a class="btn btn-outline-secondary w-100" href="/Admin/Stock/Low">Reset</a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="table-light">
                            <th style="width:90px;">#</th>
                            <th style="width:160px;">SKU</th>
                            <th>Name</th>
                            <th style="width:180px;">Category</th>
                            <th style="width:140px;">Unit</th>
                            <th style="width:140px;">Stock</th>
                            <th style="width:140px;">Reorder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr><td colspan="7" class="text-center text-muted py-4">No low-stock products 🎉</td></tr>
                        }
                        else
                        {
                            foreach (var p in Model)
                            {
                                <tr class="table-warning">
                                    <td>@p.Id</td>
                                    <td class="fw-semibold">@p.SKU</td>
                                    <td>@p.Name</td>
                                    <td class="text-muted">@p.Category?.Name</td>
                                    <td class="text-muted">@p.Unit?.Name</td>
                                    <td><span class="badge text-bg-warning">@p.StockOnHand</span></td>
                                    <td class="text-muted">@p.ReorderLevel</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
