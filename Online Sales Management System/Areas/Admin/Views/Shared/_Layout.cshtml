@using System.Security.Claims
@{
    var title = ViewData["Title"] as string ?? "Admin";
    // Lấy tên người dùng hoặc hiển thị mặc định
    var userName = User?.Identity?.IsAuthenticated == true
        ? (User.FindFirstValue(ClaimTypes.Email) ?? User.Identity?.Name ?? "Admin")
        : "Guest";

    var path = (Context.Request.Path.Value ?? "").ToLowerInvariant();
    var isAccessDenied = path.Contains("/admin/auth/accessdenied");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - OSMS</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap4.min.css" />

    <link rel="stylesheet" href="~/css/adminlte-custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminlte-compat.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-light">
            <ul class="navbar-nav align-items-center">
                <li class="nav-item">
                    <a class="nav-link px-3" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block ms-2">
                    <a href="/Admin/Dashboard" class="nav-link">
                        <i class="fas fa-home me-1 text-primary opacity-50"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" target="_blank" class="nav-link">
                        <i class="fas fa-globe me-1 text-success opacity-50"></i> Xem Website
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto align-items-center">
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button" title="Toàn màn hình">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

                <li class="nav-item dropdown ml-2">
                    <a class="nav-link p-0 mr-3" data-toggle="dropdown" href="#">
                        <div class="d-flex align-items-center bg-light rounded-pill px-3 py-1 border border-white shadow-sm user-pill">
                            <img src="https://ui-avatars.com/api/?name=@userName&background=random&color=fff"
                                 class="rounded-circle mr-2" style="width: 30px; height: 30px; object-fit: cover;">
                            <span class="d-none d-md-inline font-weight-bold text-dark small">@userName</span>
                            <i class="fas fa-chevron-down ml-2 text-muted" style="font-size: 0.7rem;"></i>
                        </div>
                    </a>

                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right p-0 border-0 shadow-lg" style="margin-top: 10px;">
                        <div class="user-dropdown-header">
                            <div class="mb-2">
                                <img src="https://ui-avatars.com/api/?name=@userName&background=fff&color=667eea&size=64" class="rounded-circle shadow-sm" />
                            </div>
                            <h6 class="mb-0 font-weight-bold">@userName</h6>
                            <small class="opacity-75">Administrator</small>
                        </div>

                        <div class="p-2">
                            <a href="/Admin/Settings" class="dropdown-item rounded py-2">
                                <i class="fas fa-cog mr-2 text-secondary"></i> Cài đặt tài khoản
                            </a>
                            <div class="dropdown-divider my-1"></div>

                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <form method="post" action="/Admin/Auth/Logout" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item rounded py-2 text-danger">
                                        <i class="fas fa-sign-out-alt mr-2"></i> Đăng xuất
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a href="/Admin/Auth/Login" class="dropdown-item rounded py-2 text-primary">
                                    <i class="fas fa-sign-in-alt mr-2"></i> Đăng nhập
                                </a>
                            }
                        </div>
                    </div>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/Admin/Dashboard" class="brand-link">
                <i class="fas fa-cube brand-image img-circle elevation-3" style="opacity: .8; line-height: 1.8; margin-left: 0.8rem;"></i>
                <span class="brand-text font-weight-light ml-2">OSMS Admin</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://ui-avatars.com/api/?name=@userName&background=random" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@userName</a>
                    </div>
                </div>

                @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Sidebar.cshtml")
            </div>
        </aside>

        <div class="content-wrapper" style="background-color: #f8f9fc;">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h1 class="m-0 text-dark fw-bold h3">@title</h1>
                        <ol class="breadcrumb float-sm-right bg-transparent p-0 m-0">
                            <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active">@title</li>
                        </ol>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid pb-4">
                    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Toasts.cshtml")
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <div>
                <strong>Copyright &copy; @DateTime.UtcNow.Year <a href="#" class="footer-link">OSMS System</a>.</strong>
                <span class="text-muted ml-1">All rights reserved.</span>
            </div>
            <div class="d-none d-sm-inline-block">
                <span class="text-muted small mr-2">Version 1.0.0</span>
                <i class="fas fa-code text-primary opacity-50"></i>
            </div>
        </footer>

    </div>

    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_PermissionDeniedModal.cshtml")

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/js/adminlte-init.js" asp-append-version="true"></script>

    @if (isAccessDenied)
    {
        <script>
            $(function () { $('#permissionDeniedModal').modal('show'); });
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>