@using System.Security.Claims
@{
    var title = ViewData["Title"] as string ?? "Admin";
    var userName = User?.Identity?.IsAuthenticated == true
        ? (User.FindFirstValue(ClaimTypes.Email) ?? User.Identity?.Name ?? "Admin")
        : "Guest";

    var path = (Context.Request.Path.Value ?? "").ToLowerInvariant();
    var isAccessDenied = path.Contains("/admin/auth/accessdenied");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - OSMS</title>

    <!-- Font Awesome (icons like the demo video) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- AdminLTE (includes Bootstrap 4 CSS) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />

    <!-- Optional: DataTables (Bootstrap 4 styling) -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap4.min.css" />

    <link rel="stylesheet" href="~/css/adminlte-compat.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminlte-custom.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/Admin/Dashboard" class="nav-link">Home</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-user"></i>
                    <span class="d-none d-sm-inline ml-1">@userName</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="/Admin/Settings">
                        <i class="fas fa-cog mr-2"></i> Settings
                    </a>
                    <div class="dropdown-divider"></div>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <form method="post" action="/Admin/Auth/Logout" class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt mr-2"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="dropdown-item" href="/Admin/Auth/Login">
                            <i class="fas fa-sign-in-alt mr-2"></i> Login
                        </a>
                    }
                </div>
            </li>
        </ul>
    </nav>

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/Admin/Dashboard" class="brand-link">
            <span class="brand-text font-weight-light">OSMS</span>
        </a>

        <div class="sidebar">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <i class="fas fa-user-circle fa-2x text-white-50"></i>
                </div>
                <div class="info">
                    <a href="#" class="d-block">@userName</a>
                    <small class="text-muted">Admin Panel</small>
                </div>
            </div>

            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Sidebar.cshtml")
        </div>
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">@title</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active">@title</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">
                @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Toasts.cshtml")
                @RenderBody()
            </div>
        </section>
    </div>

    <footer class="main-footer">
        <strong>OSMS</strong> &copy; @DateTime.UtcNow.Year
        <div class="float-right d-none d-sm-inline-block">
            <b>AdminLTE</b> 3
        </div>
    </footer>

</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_PermissionDeniedModal.cshtml")

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

<!-- Optional: DataTables -->
<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap4.min.js"></script>

<script src="~/js/adminlte-init.js" asp-append-version="true"></script>

@if (isAccessDenied)
{
    <script>
        $(function () { $('#permissionDeniedModal').modal('show'); });
    </script>
}

@RenderSection("Scripts", required: false)
</body>
</html>
