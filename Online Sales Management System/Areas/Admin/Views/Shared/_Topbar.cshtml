@model string
@{
    var userName = Model ?? "Admin";
}
<div class="px-3 px-lg-4 py-3 d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center gap-2">
        <button class="btn btn-outline-secondary d-lg-none" type="button" onclick="alert('Sidebar is hidden on mobile in this simple layout.');">
            ☰
        </button>
        <div>
            <div class="fw-semibold">Welcome</div>
            <div class="text-muted small">@userName</div>
        </div>
    </div>

    <div class="d-flex align-items-center gap-2">
        <a class="btn btn-sm btn-outline-primary" href="/Admin/Dashboard">Home</a>

        @if (User?.Identity?.IsAuthenticated == true)
        {
            <form method="post" action="/Admin/Auth/Logout" class="m-0">
                @Html.AntiForgeryToken()
                <button class="btn btn-sm btn-outline-danger" type="submit">Logout</button>
            </form>
        }
        else
        {
            <a class="btn btn-sm btn-primary" href="/Admin/Auth/Login">Login</a>
        }
    </div>
</div>
