@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - OSMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { background: #f6f7fb; }
        .auth-card { border: 0; border-radius: 1rem; box-shadow: 0 12px 30px rgba(0,0,0,.08); }
        .brand-dot { width: 10px; height: 10px; border-radius: 999px; display:inline-block; background: #0d6efd; }
    </style>

    @RenderSection("Head", required: false)
</head>
<body>
    <main class="min-vh-100 d-flex align-items-center">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
