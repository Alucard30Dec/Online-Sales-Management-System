@* Optional partial: drop into layout if you prefer *@
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    @if (TempData["ToastSuccess"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="toast align-items-center show" role="alert">
            <div class="d-flex">
                <div class="toast-body">@ok</div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
    @if (TempData["ToastError"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="toast align-items-center show" role="alert">
            <div class="d-flex">
                <div class="toast-body">@err</div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>

<script>
    (function () {
        if (!window.bootstrap) return;
        const els = document.querySelectorAll('.toast');
        els.forEach(t => new bootstrap.Toast(t, { delay: 3500 }).show());
    })();
</script>