@model OnlineSalesManagementSystem.Areas.Admin.ViewModels.Auth.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Areas/Admin/Views/Shared/_AuthLayout.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="/Admin/Dashboard"><b>OSMS</b> Admin</a>
    </div>

    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <span class="h1"><b>Sign</b> In</span>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>
            }

            <form asp-area="Admin" asp-controller="Auth" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="username" />
                    <div class="input-group-append">
                        <div class="input-group-text"><span class="fas fa-envelope"></span></div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password" autocomplete="current-password" />
                    <div class="input-group-append">
                        <div class="input-group-text"><span class="fas fa-lock"></span></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember" asp-for="RememberMe" />
                            <label for="remember">Remember Me</label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </div>
            </form>

            <hr />
            <div class="text-muted small">
                Default admin: <code>admin@osms.local</code> / <code>Admin@12345</code>
            </div>
            <div class="text-muted small">
                Sales staff: <code>sales@osms.local</code> / <code>Sales@12345</code>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
