@model OnlineSalesManagementSystem.Areas.Admin.Controllers.ReportsController.ReportsIndexVm
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-start justify-content-between gap-3 mb-3">
        <div>
            <h1 class="h3 mb-0">Reports</h1>
            <div class="text-muted">Sales, Purchases, and rough Profit by date range.</div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-12 col-md-4 col-xl-3">
                    <label class="form-label small text-muted">From</label>
                    <input class="form-control" type="date" name="from" value="@Model.From.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-12 col-md-4 col-xl-3">
                    <label class="form-label small text-muted">To</label>
                    <input class="form-control" type="date" name="to" value="@Model.To.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-12 col-md-4 col-xl-3 d-flex gap-2">
                    <button class="btn btn-outline-primary w-100" type="submit">Apply</button>
                    <a class="btn btn-outline-secondary w-100" href="/Admin/Reports">Reset</a>
                </div>
                <div class="col-12 col-xl-3 text-muted small">
                    Range: <span class="fw-semibold">@Model.From.ToString("yyyy-MM-dd")</span> → <span class="fw-semibold">@Model.To.ToString("yyyy-MM-dd")</span>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Sales Total</div>
                    <div class="h4 mb-0">@Model.SalesTotal.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Purchases Total</div>
                    <div class="h4 mb-0">@Model.PurchaseTotal.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Rough Profit</div>
                    <div class="h4 mb-0 @(Model.Profit >= 0 ? "text-success" : "text-danger")">@Model.Profit.ToString("N0")</div>
                    <div class="text-muted small mt-1">Profit ≈ Sales − Purchases</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <div class="fw-semibold">Recent Invoices (max 200)</div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr class="table-light">
                                    <th style="width:90px;">#</th>
                                    <th>No</th>
                                    <th>Customer</th>
                                    <th style="width:140px;">Date</th>
                                    <th style="width:140px;">Total</th>
                                    <th style="width:120px;">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Invoices.Count == 0)
                                {
                                    <tr><td colspan="6" class="text-center text-muted py-4">No invoices in range.</td></tr>
                                }
                                else
                                {
                                    foreach (var inv in Model.Invoices)
                                    {
                                        <tr>
                                            <td>@inv.Id</td>
                                            <td class="fw-semibold"><a href="/Admin/Invoices/Details/@inv.Id">@inv.InvoiceNo</a></td>
                                            <td>@(inv.Customer?.Name ?? "Walk-in")</td>
                                            <td>@inv.InvoiceDate.ToString("yyyy-MM-dd")</td>
                                            <td>@inv.GrandTotal.ToString("N0")</td>
                                            <td><span class="badge text-bg-secondary">@inv.Status</span></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <div class="fw-semibold">Recent Purchases (max 200)</div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr class="table-light">
                                    <th style="width:90px;">#</th>
                                    <th>No</th>
                                    <th>Supplier</th>
                                    <th style="width:140px;">Date</th>
                                    <th style="width:140px;">Total</th>
                                    <th style="width:120px;">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Purchases.Count == 0)
                                {
                                    <tr><td colspan="6" class="text-center text-muted py-4">No purchases in range.</td></tr>
                                }
                                else
                                {
                                    foreach (var po in Model.Purchases)
                                    {
                                        <tr>
                                            <td>@po.Id</td>
                                            <td class="fw-semibold"><a href="/Admin/Purchases/Details/@po.Id">@po.PurchaseNo</a></td>
                                            <td>@po.Supplier?.Name</td>
                                            <td>@po.PurchaseDate.ToString("yyyy-MM-dd")</td>
                                            <td>@po.GrandTotal.ToString("N0")</td>
                                            <td><span class="badge text-bg-secondary">@po.Status</span></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
