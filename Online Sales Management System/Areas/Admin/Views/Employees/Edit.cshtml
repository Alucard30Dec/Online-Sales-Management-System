@model OnlineSalesManagementSystem.Domain.Entities.Employee
@{
    ViewData["Title"] = "Sửa Nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/employees-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">
    <div class="hero-header d-flex justify-content-between align-items-center">
        <i class="fas fa-user-edit hero-icon-bg"></i>
        <div style="z-index: 1;">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-custom mb-2">
                    <li class="breadcrumb-item"><a href="/Admin/Employees">Nhân sự</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
            <h2 class="fw-bold text-dark mb-0">Cập nhật hồ sơ</h2>
        </div>
        <div style="z-index: 1;">
            <a href="/Admin/Employees" class="btn btn-outline-secondary rounded-pill px-4"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card card-modern p-4">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger shadow-sm border-0 rounded-3 mb-4">
                        @Html.ValidationSummary(excludePropertyErrors: false)
                    </div>
                }

                <form method="post" action="/Admin/Employees/Edit" class="row g-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Họ và tên <span class="text-danger">*</span></label>
                        <input class="form-control" name="Name" value="@Model.Name" maxlength="150" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Chức vụ</label>
                        <input class="form-control" name="Position" value="@Model.Position" maxlength="120" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Số điện thoại</label>
                        <input class="form-control" name="Phone" value="@Model.Phone" maxlength="30" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Email</label>
                        <input class="form-control" name="Email" value="@Model.Email" maxlength="150" type="email" />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold text-muted">Địa chỉ</label>
                        <input class="form-control" name="Address" value="@Model.Address" maxlength="300" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Mức lương cơ bản</label>
                        <div class="input-group">
                            <input class="form-control fw-bold text-primary" name="Salary" value="@Model.Salary" type="number" step="0.01" min="0" />
                            <span class="input-group-text bg-white">VNĐ</span>
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-content-end gap-3 mt-4">
                        <a href="/Admin/Employees" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                        <button type="submit" class="btn btn-gradient rounded-pill px-5 shadow fw-bold">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>