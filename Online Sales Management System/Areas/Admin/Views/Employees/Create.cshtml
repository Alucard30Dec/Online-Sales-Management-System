@model OnlineSalesManagementSystem.Domain.Entities.Employee
@{
    ViewData["Title"] = "Create Employee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 mb-0">Create Employee</h1>
            <div class="text-muted">Add a new employee.</div>
        </div>
        <a class="btn btn-outline-secondary" href="/Admin/Employees">Back</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(excludePropertyErrors: false)
                </div>
            }

            <form method="post" action="/Admin/Employees/Create" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-12 col-lg-6">
                    <label class="form-label">Name <span class="text-danger">*</span></label>
                    <input class="form-control" name="Name" value="@Model.Name" maxlength="150" required />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Position</label>
                    <input class="form-control" name="Position" value="@Model.Position" maxlength="120" />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Phone</label>
                    <input class="form-control" name="Phone" value="@Model.Phone" maxlength="30" />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Email</label>
                    <input class="form-control" name="Email" value="@Model.Email" maxlength="150" type="email" />
                </div>

                <div class="col-12">
                    <label class="form-label">Address</label>
                    <input class="form-control" name="Address" value="@Model.Address" maxlength="300" />
                </div>

                <div class="col-12 col-lg-4">
                    <label class="form-label">Salary</label>
                    <input class="form-control" name="Salary" value="@Model.Salary" type="number" step="0.01" min="0" />
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-outline-secondary" href="/Admin/Employees">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
