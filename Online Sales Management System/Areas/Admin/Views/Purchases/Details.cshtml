@model OnlineSalesManagementSystem.Domain.Entities.Purchase
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Chi tiết Phiếu nhập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // Xử lý badge và label
    string badgeClass = Model.Status switch
    {
        PurchaseStatus.Received => "status-received",
        PurchaseStatus.Cancelled => "status-cancelled",
        _ => "status-draft"
    };
    string statusLabel = Model.Status switch
    {
        PurchaseStatus.Received => "Đã nhập kho",
        PurchaseStatus.Cancelled => "Đã hủy",
        _ => "Bản nháp"
    };
}

<link rel="stylesheet" href="~/css/purchases-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">

    <div class="hero-header mb-4">
        <div class="d-flex justify-content-between align-items-start position-relative" style="z-index: 1;">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom mb-2">
                        <li class="breadcrumb-item"><a href="/Admin/Purchases">Nhập hàng</a></li>
                        <li class="breadcrumb-item active">Chi tiết</li>
                    </ol>
                </nav>
                <h2 class="fw-bold text-dark mb-1">Phiếu nhập #@Model.PurchaseNo</h2>
                <div class="d-flex align-items-center gap-3 mt-2">
                    <span class="badge-status @badgeClass">@statusLabel</span>
                    <span class="text-muted small"><i class="far fa-calendar-alt me-1"></i> @Model.PurchaseDate.ToString("dd/MM/yyyy")</span>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary rounded-pill px-4" href="/Admin/Purchases">Quay lại</a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-xl-8">
            <div class="card card-modern h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h5 class="fw-bold text-dark mb-0">Danh sách sản phẩm</h5>
                    <div class="text-muted small">Nhà cung cấp: <strong class="text-primary">@Model.Supplier?.Name</strong></div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-modern mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4" style="width:60px;">#</th>
                                    <th>Sản phẩm</th>
                                    <th class="text-center" style="width:100px;">Số lượng</th>
                                    <th class="text-end" style="width:150px;">Đơn giá</th>
                                    <th class="text-end pe-4" style="width:150px;">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items == null || Model.Items.Count == 0)
                                {
                                    <tr><td colspan="5" class="text-center py-4 text-muted">Không có sản phẩm nào.</td></tr>
                                }
                                else
                                {
                                    int stt = 1;
                                    foreach (var it in Model.Items)
                                    {
                                        <tr>
                                            <td class="ps-4 text-muted">@stt</td>
                                            <td>
                                                <div class="fw-bold text-dark">@it.Product?.Name</div>
                                                <div class="small text-muted">SKU: @it.Product?.SKU</div>
                                            </td>
                                            <td class="text-center fw-semibold">@it.Qty</td>
                                            <td class="text-end text-muted">@it.UnitCost.ToString("N0")</td>
                                            <td class="text-end pe-4 fw-bold">@it.LineTotal.ToString("N0")</td>
                                        </tr>
                                        stt++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-4">
            <div class="card card-modern mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Tổng cộng</h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tạm tính:</span>
                        <span class="fw-semibold">@Model.SubTotal.ToString("N0") đ</span>
                    </div>

                    <div class="border-top my-3 border-dashed"></div>

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-dark h5 mb-0">Tổng thanh toán:</span>
                        <span class="fw-bold text-success h4 mb-0">@Model.GrandTotal.ToString("N0") đ</span>
                    </div>
                </div>
            </div>

            @if (Model.Status == PurchaseStatus.Draft)
            {
                <div class="card card-modern border-warning border-2">
                    <div class="card-body p-4">
                        <h6 class="fw-bold text-warning mb-2"><i class="fas fa-exclamation-triangle me-2"></i>Hành động</h6>
                        <p class="text-muted small mb-3">Phiếu đang ở trạng thái Nháp. Bạn có thể:</p>

                        <div class="d-grid gap-2">
                            <form method="post" action="/Admin/Purchases/Receive/@Model.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-gradient w-100 py-2 rounded-pill fw-bold shadow-sm" onclick="return confirm('Xác nhận nhập kho? Tồn kho sản phẩm sẽ tăng lên.');">
                                    <i class="fas fa-check-circle me-2"></i> Xác nhận nhập kho
                                </button>
                            </form>

                            <form method="post" action="/Admin/Purchases/Cancel/@Model.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger w-100 py-2 rounded-pill fw-bold" onclick="return confirm('Hủy phiếu nhập này?');">
                                    <i class="fas fa-times-circle me-2"></i> Hủy phiếu
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-light border shadow-sm text-center">
                    <i class="fas fa-lock me-2"></i> Phiếu này đã hoàn tất hoặc bị hủy.
                </div>
            }
        </div>
    </div>
</div>