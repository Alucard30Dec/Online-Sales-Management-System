@model OnlineSalesManagementSystem.Areas.Admin.Controllers.AdminsController.AdminEditVm
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Edit Admin";
    var groups = ViewBag.Groups as List<AdminGroup> ?? new();
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-user-edit mr-1"></i> Edit Admin</h3>
        <div class="card-tools">
            <a class="btn btn-tool" href="/Admin/Admins" data-toggle="tooltip" title="Back"><i class="fas fa-arrow-left"></i></a>
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Admins" asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>
            }

            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="form-group">
                        <label>Full name</label>
                        <input class="form-control" name="FullName" value="@Model.FullName" maxlength="150" />
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="form-group">
                        <label>New password</label>
                        <input class="form-control" name="NewPassword" value="@Model.NewPassword" type="password" />
                        <small class="text-muted">Leave empty to keep current password.</small>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="form-group">
                        <label>Group</label>
                        <select class="form-control" name="AdminGroupId">
                            <option value="">-- None --</option>
                            @foreach (var g in groups)
                            {
                                var selected = (Model.AdminGroupId == g.Id) ? "selected" : null;
                                <option value="@g.Id" selected="@selected">@g.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="form-group mb-0 mt-4">
                        <div class="icheck-primary d-inline">
                            <input asp-for="IsActive" id="isActive" />
                            <label for="isActive">Active</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a class="btn btn-default" href="/Admin/Admins"><i class="fas fa-times mr-1"></i> Cancel</a>
            <button class="btn btn-primary" type="submit"><i class="fas fa-save mr-1"></i> Save changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}