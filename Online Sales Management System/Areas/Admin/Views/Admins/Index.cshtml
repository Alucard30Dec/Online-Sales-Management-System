@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using OnlineSalesManagementSystem.Services.Security
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Admins";

    bool canCreate = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Admin, PermissionConstants.Actions.Create))).Succeeded;
    bool canEdit = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Admin, PermissionConstants.Actions.Edit))).Succeeded;
    bool canDelete = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Admin, PermissionConstants.Actions.Delete))).Succeeded;

    string myId = User.FindFirstValue(ClaimTypes.NameIdentifier) ?? "";
    string? q = ViewBag.Query as string;

    // Helper theo email (đồng bộ với code SuperAdminProtection)
    bool IsSuperAdminEmail(string? email)
        => string.Equals(email?.Trim(), SuperAdminProtection.SuperAdminEmail, StringComparison.OrdinalIgnoreCase);

    bool currentIsSuperAdmin = IsSuperAdminEmail(User.FindFirstValue(ClaimTypes.Email));
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Admins</h3>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input class="form-control" name="q" value="@q" placeholder="Search by username/email..." />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
        </div>
    </div>
</form>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th style="width:130px;">Status</th>
                    <th style="width:260px;" class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    var isSuper = IsSuperAdminEmail(u.Email);
                    // Nếu dự án bạn dùng custom user có IsActive, razor runtime vẫn render được nếu property tồn tại.
                    bool isActive = true;
                    try { isActive = (bool)((dynamic)u).IsActive; } catch { }

                    <tr>
                        <td>
                            @u.UserName
                            @if (isSuper)
                            {
                                <span class="badge badge-dark ml-2"><i class="fas fa-crown"></i> Super Admin</span>
                            }
                            @if (string.Equals(u.Id, myId, StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge badge-info ml-2">You</span>
                            }
                        </td>
                        <td>@u.Email</td>
                        <td>
                            @if (isActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-right">

                            @* Activate / Deactivate (KHÔNG áp dụng cho super admin) *@
                            @if (!isSuper)
                            {
                                if (!isActive && canEdit)
                                {
                                    <form class="d-inline" method="post"
                                          asp-area="Admin" asp-controller="Admins" asp-action="Activate" asp-route-id="@u.Id">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Activate">
                                            <i class="fas fa-user-check"></i>
                                        </button>
                                    </form>
                                }

                                if (isActive && canDelete && !string.Equals(u.Id, myId, StringComparison.OrdinalIgnoreCase))
                                {
                                    <form class="d-inline" method="post"
                                          asp-area="Admin" asp-controller="Admins" asp-action="Disable" asp-route-id="@u.Id"
                                          onsubmit="return confirm('Deactivate this admin account?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="Deactivate">
                                            <i class="fas fa-user-slash"></i>
                                        </button>
                                    </form>
                                }
                            }

                            @* Edit (Super admin chỉ cho super admin sửa) *@
                            @if (canEdit && (!isSuper || currentIsSuperAdmin))
                            {
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-area="Admin" asp-controller="Admins" asp-action="Edit" asp-route-id="@u.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                            }

                            @* Delete button cũ: giữ ẩn với super admin, còn lại nếu bạn muốn vẫn giữ thì bật lại.
                           Hiện tại Disable/Activate đã đủ cho yêu cầu active/inactive. *@
                            @if (canDelete && !isSuper)
                            {
                                <!-- intentionally no hard-delete -->
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
