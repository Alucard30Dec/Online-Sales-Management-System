@model OnlineSalesManagementSystem.Domain.Entities.Unit
@{
    ViewData["Title"] = "Thêm mới Đơn vị";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/units-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">

    <div class="hero-header d-flex justify-content-between align-items-center">
        <i class="fas fa-plus-circle hero-icon-bg"></i>
        <div style="z-index: 1;">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-custom mb-2">
                    <li class="breadcrumb-item"><a href="/Admin/Units">Đơn vị tính</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </nav>
            <h2 class="fw-bold text-dark mb-0">Thêm đơn vị mới</h2>
        </div>
        <div style="z-index: 1;">
            <a href="/Admin/Units" class="btn btn-outline-secondary rounded-pill px-4"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="card card-modern p-4">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger shadow-sm border-0 rounded-3">
                        @Html.ValidationSummary(excludePropertyErrors: false)
                    </div>
                }

                <form method="post" action="/Admin/Units/Create" class="row g-4">
                    @Html.AntiForgeryToken()

                    <div class="col-12">
                        <label class="form-label fw-bold text-muted">Tên đơn vị <span class="text-danger">*</span></label>
                        <input class="form-control form-control-lg" name="Name" value="@Model.Name" maxlength="80" required placeholder="Ví dụ: Hộp, Cái, Thùng..." />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold text-muted">Tên viết tắt (Short Name)</label>
                        <input class="form-control" name="ShortName" value="@Model.ShortName" maxlength="20" placeholder="Ví dụ: pcs, box, kg..." />
                    </div>

                    <div class="col-12 d-flex justify-content-end gap-3 mt-4">
                        <a href="/Admin/Units" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                        <button type="submit" class="btn btn-gradient rounded-pill px-5 shadow-sm fw-bold">Tạo mới</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>