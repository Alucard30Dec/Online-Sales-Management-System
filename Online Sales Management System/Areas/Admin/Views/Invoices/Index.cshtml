@model List<OnlineSalesManagementSystem.Domain.Entities.Invoice>
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Quản lý Hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string q = ViewBag.Query as string ?? "";
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 10);
    int total = (int)(ViewBag.Total ?? 0);
    int totalPages = pageSize <= 0 ? 0 : (int)Math.Ceiling(total / (double)pageSize);
    bool hasPrev = page > 1;
    bool hasNext = page < totalPages;
    int start = (page - 1) * pageSize + (total == 0 ? 0 : 1);
    int end = Math.Min(page * pageSize, total);
}

<link rel="stylesheet" href="~/css/invoices-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">

    <div class="hero-header">
        <i class="fas fa-cash-register hero-icon-bg"></i>
        <div class="d-flex justify-content-between align-items-center position-relative" style="z-index: 1;">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom mb-2">
                        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Hóa đơn</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center gap-3">
                    <h2 class="fw-bold text-dark mb-0">Hóa đơn bán hàng</h2>
                    <span class="stat-badge"><i class="fas fa-receipt"></i> @total hóa đơn</span>
                </div>
                <p class="text-muted mt-2 mb-0">Quản lý giao dịch bán hàng và theo dõi trạng thái thanh toán.</p>
            </div>

            <a href="/Admin/Invoices/Create" class="btn btn-gradient shadow-lg px-4 py-3 rounded-pill d-flex align-items-center gap-2">
                <div class="bg-white text-danger rounded-circle d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                    <i class="fas fa-plus fa-xs"></i>
                </div>
                <span class="fw-bold">Tạo hóa đơn</span>
            </a>
        </div>
    </div>

    <div class="card card-modern">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
            <form method="get" class="row g-3 align-items-center">
                <input type="hidden" name="page" value="1" />

                <div class="col-12 col-md-5">
                    <div class="input-group shadow-sm" style="border-radius: 50px; overflow: hidden;">
                        <span class="input-group-text bg-white border-end-0 ps-3"><i class="fas fa-search text-muted"></i></span>
                        <input class="form-control border-start-0" name="q" value="@q" placeholder="Tìm theo mã hóa đơn, khách hàng..." style="border-left: none;">
                    </div>
                </div>

                <div class="col-6 col-md-2">
                    <select class="form-select shadow-sm" name="pageSize" onchange="this.form.submit()" style="border-radius: 20px;">
                        @{
                            var sizes = new[] { 10, 25, 50, 100 };
                        }
                        @foreach (var s in sizes)
                        {
                            <option value="@s" selected="@(s == pageSize ? "selected" : null)">@s dòng</option>
                        }
                    </select>
                </div>

                <div class="col-auto ms-auto">
                    <a href="/Admin/Invoices" class="btn btn-light rounded-pill px-3 shadow-sm"><i class="fas fa-sync-alt me-1"></i> Reset</a>
                    <button type="submit" class="btn btn-outline-danger rounded-pill px-3 shadow-sm">Tìm kiếm</button>
                </div>
            </form>
        </div>

        <div class="card-body px-0">
            <div class="table-responsive">
                <table class="table table-modern mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4 text-center">#ID</th>
                            <th>Mã hóa đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày lập</th>
                            <th>Tổng tiền</th>
                            <th>Đã thanh toán</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (total == 0)
                        {
                            <tr><td colspan="8" class="text-center py-5 text-muted">Chưa có hóa đơn nào.</td></tr>
                        }
                        else
                        {
                            foreach (var inv in Model)
                            {
                                string badgeClass = inv.Status switch
                                {
                                    InvoiceStatus.Paid => "status-paid",
                                    InvoiceStatus.Cancelled => "status-cancelled",
                                    _ => "status-pending"
                                };

                                <tr>
                                    <td class="ps-4 text-center text-muted">@inv.Id</td>
                                    <td><span class="fw-bold text-dark">@inv.InvoiceNo</span></td>
                                    <td>
                                        @if (inv.Customer != null)
                                        {
                                            <span class="fw-semibold text-primary">@inv.Customer.Name</span>
                                        }
                                        else
                                        {

                                            <span class="text-muted fst-italic">Khách lẻ</span>
                                        }
                                    </td>
                                    <td>@inv.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                    <td class="fw-bold text-danger">@inv.GrandTotal.ToString("N0") đ</td>
                                    <td class="text-success">@inv.PaidAmount.ToString("N0") đ</td>
                                    <td class="text-center"><span class="badge-status @badgeClass">@inv.Status</span></td>
                                    <td class="text-end pe-4">
                                        <a href="/Admin/Invoices/Details/@inv.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                                            Chi tiết <i class="fas fa-arrow-right ms-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (total > 0)
        {
            <div class="card-footer bg-white border-top-0 d-flex align-items-center justify-content-between py-3 px-4">
                <div class="text-muted small">Hiển thị @start - @end trong @total hóa đơn</div>
                <nav>
                    <ul class="pagination pagination-sm mb-0 shadow-sm">
                        <li class="page-item @(hasPrev ? "" : "disabled")"><a class="page-link rounded-start" href="@BuildUrl(page - 1)">Trước</a></li>
                        @{
                            int s = Math.Max(1, page - 2); int e = Math.Min(totalPages, page + 2);
                            for (int i = s; i <= e; i++)
                            {
                                <li class="page-item @(i == page ? "active" : "")"><a class="page-link" href="@BuildUrl(i)">@i</a></li>
                            }
                        }
                        <li class="page-item @(hasNext ? "" : "disabled")"><a class="page-link rounded-end" href="@BuildUrl(page + 1)">Sau</a></li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@functions {
    private string BuildUrl(int page)
    {
        if (page < 1) page = 1;
        string q = ViewBag.Query as string ?? "";
        int pageSize = (int)(ViewBag.PageSize ?? 10);
        return $"/Admin/Invoices?q={Uri.EscapeDataString(q)}&page={page}&pageSize={pageSize}";
    }
}