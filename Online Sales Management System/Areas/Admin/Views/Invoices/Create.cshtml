@model OnlineSalesManagementSystem.Areas.Admin.Controllers.InvoicesController.InvoiceCreateVm
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Create Invoice";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var customers = ViewBag.Customers as List<Customer> ?? new();
    var products = ViewBag.Products as List<Product> ?? new();
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 mb-0">Create Invoice</h1>
            <div class="text-muted">Invoice will decrease stock and create StockMovement (Out).</div>
        </div>
        <a class="btn btn-outline-secondary" href="/Admin/Invoices">Back</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(excludePropertyErrors: false)
                </div>
            }

            <form method="post" action="/Admin/Invoices/Create" id="invoiceForm">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-12 col-lg-6">
                        <label class="form-label">Customer (optional)</label>
                        <select class="form-select" name="CustomerId">
                            <option value="">Walk-in</option>
                            @foreach (var c in customers)
                            {
                                var selected = (Model.CustomerId == c.Id) ? "selected" : null;
                                <option value="@c.Id" selected="@selected">@c.Name</option>
                            }
                        </select>
                    </div>

                    <div class="col-12 col-lg-6">
                        <label class="form-label">Invoice date</label>
                        <input class="form-control" type="date" name="InvoiceDate" value="@Model.InvoiceDate.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="fw-semibold">Items</div>
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addRow()">+ Add item</button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered align-middle" id="itemsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th style="min-width: 280px;">Product</th>
                                        <th style="width: 140px;">Qty</th>
                                        <th style="width: 200px;">Unit Price</th>
                                        <th style="width: 90px;" class="text-center">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var rows = (Model.Items?.Count ?? 0) > 0 ? Model.Items : new List<OnlineSalesManagementSystem.Areas.Admin.Controllers.InvoicesController.InvoiceItemVm> { new() };
                                        for (int i = 0; i < rows.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <select class="form-select" name="Items[@i].ProductId" required>
                                                        <option value="">-- Select product --</option>
                                                        @foreach (var p in products)
                                                        {
                                                            var selected = (rows[i].ProductId == p.Id) ? "selected" : null;
                                                            <option value="@p.Id" selected="@selected">@p.Name (@p.SKU) - Stock: @p.StockOnHand</option>
                                                        }
                                                    </select>
                                                </td>
                                                <td>
                                                    <input class="form-control" type="number" min="1" step="1" name="Items[@i].Qty" value="@rows[i].Qty" required />
                                                </td>
                                                <td>
                                                    <input class="form-control" type="number" min="0" step="0.01" name="Items[@i].UnitPrice" value="@rows[i].UnitPrice" required />
                                                </td>
                                                <td class="text-center">
                                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeRow(this)">×</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="text-muted small">
                            Stock is validated server-side (cannot sell more than StockOnHand).
                        </div>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Create Invoice</button>
                        <a class="btn btn-outline-secondary" href="/Admin/Invoices">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function reindex() {
            const tbody = document.querySelector('#itemsTable tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            rows.forEach((tr, idx) => {
                tr.querySelectorAll('select, input').forEach(el => {
                    const name = el.getAttribute('name') || '';
                    el.setAttribute('name', name.replace(/Items\[\d+\]/, `Items[${idx}]`));
                });
            });
        }

        function addRow() {
            const tbody = document.querySelector('#itemsTable tbody');
            const idx = tbody.querySelectorAll('tr').length;

            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>
                    <select class="form-select" name="Items[${idx}].ProductId" required>
                        <option value="">-- Select product --</option>
                        ${getProductOptionsHtml()}
                    </select>
                </td>
                <td>
                    <input class="form-control" type="number" min="1" step="1" name="Items[${idx}].Qty" value="1" required />
                </td>
                <td>
                    <input class="form-control" type="number" min="0" step="0.01" name="Items[${idx}].UnitPrice" value="0" required />
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeRow(this)">×</button>
                </td>
            `;
            tbody.appendChild(tr);
        }

        function removeRow(btn) {
            const tbody = document.querySelector('#itemsTable tbody');
            const tr = btn.closest('tr');
            if (!tr) return;
            tr.remove();
            if (tbody.querySelectorAll('tr').length === 0) addRow();
            reindex();
        }

        function getProductOptionsHtml() {
            return document.getElementById('productOptionsTemplate').innerHTML;
        }
    </script>

    <script type="text/template" id="productOptionsTemplate">
        @foreach (var p in products)
        {
            <text><option value="@p.Id">@p.Name (@p.SKU) - Stock: @p.StockOnHand</option></text>
        }
    </script>
}
