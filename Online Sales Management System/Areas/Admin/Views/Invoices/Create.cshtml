@model OnlineSalesManagementSystem.Areas.Admin.Controllers.InvoicesController.InvoiceCreateVm
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Tạo Hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var customers = ViewBag.Customers as List<Customer> ?? new();
    var products = ViewBag.Products as List<Product> ?? new();
}

<link rel="stylesheet" href="~/css/invoices-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">
    <div class="hero-header d-flex justify-content-between align-items-center">
        <i class="fas fa-shopping-basket hero-icon-bg"></i>
        <div style="z-index: 1;">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-custom mb-2">
                    <li class="breadcrumb-item"><a href="/Admin/Invoices">Hóa đơn</a></li>
                    <li class="breadcrumb-item active">Tạo mới</li>
                </ol>
            </nav>
            <h2 class="fw-bold text-dark mb-0">Tạo hóa đơn bán hàng</h2>
        </div>
        <div style="z-index: 1;">
            <a href="/Admin/Invoices" class="btn btn-outline-secondary rounded-pill px-4"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Invoices" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row g-4">
            <div class="col-12">
                <div class="card card-modern p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger shadow-sm border-0 rounded-3 mb-4">@Html.ValidationSummary(excludePropertyErrors: true)</div>
                    }

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Khách hàng</label>
                            <select class="form-select form-select-lg" name="CustomerId">
                                <option value="">-- Khách lẻ (Walk-in) --</option>
                                @foreach (var c in customers)
                                {
                                    var selected = (Model.CustomerId == c.Id) ? "selected" : null;
                                    <option value="@c.Id" selected="@selected">@c.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Ngày lập</label>
                            <input class="form-control form-control-lg" type="date" name="InvoiceDate" value="@Model.InvoiceDate.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card card-modern">
                    <div class="card-header bg-white border-bottom-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0 text-danger"><i class="fas fa-list-ul me-2"></i>Danh sách sản phẩm</h5>
                        <button type="button" class="btn btn-sm btn-outline-danger rounded-pill px-3" onclick="addRow()">
                            <i class="fas fa-plus me-1"></i> Thêm dòng
                        </button>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-modern mb-0" id="itemsTable">
                                <thead>
                                    <tr>
                                        <th class="ps-4" style="min-width: 300px;">Sản phẩm</th>
                                        <th style="width: 150px;">Số lượng</th>
                                        <th style="width: 200px;">Đơn giá bán</th>
                                        <th style="width: 80px;" class="text-center"><i class="fas fa-trash"></i></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var rows = (Model.Items?.Any() == true) ? Model.Items : new List<OnlineSalesManagementSystem.Areas.Admin.Controllers.InvoicesController.InvoiceItemVm> { new() };
                                    }
                                    @for (var i = 0; i < rows.Count; i++)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <select class="form-select table-input" name="Items[@i].ProductId" required>
                                                    <option value="">-- Chọn sản phẩm --</option>
                                                    @foreach (var p in products)
                                                    {
                                                        var selected = (rows[i].ProductId == p.Id) ? "selected" : null;
                                                        <option value="@p.Id" selected="@selected">@p.Name (@p.SKU) - Tồn: @p.StockOnHand</option>
                                                    }
                                                </select>
                                            </td>
                                            <td>
                                                <input class="table-input text-center fw-bold" type="number" min="1" step="1" name="Items[@i].Qty" value="@rows[i].Qty" required />
                                            </td>
                                            <td>
                                                <div class="input-group input-group-sm">
                                                    <input class="form-control table-input text-end" type="number" min="0" step="0.01" name="Items[@i].UnitPrice" value="@rows[i].UnitPrice" required />
                                                    <span class="input-group-text bg-white border-start-0">đ</span>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm text-danger btn-light rounded-circle" style="width:32px;height:32px;" onclick="removeRow(this)">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-top-0 p-3">
                        <div class="alert alert-warning mb-0 small border-0 shadow-sm d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle fa-lg me-3 text-warning"></i>
                            <div>
                                <strong>Lưu ý:</strong> Việc tạo hóa đơn sẽ tự động <strong>trừ tồn kho</strong> ngay lập tức.<br />
                                Vui lòng kiểm tra kỹ số lượng trước khi lưu.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end gap-3 pb-5">
                <a class="btn btn-light rounded-pill px-4" href="/Admin/Invoices">Hủy bỏ</a>
                <button type="submit" class="btn btn-gradient rounded-pill px-5 shadow fw-bold"><i class="fas fa-save me-2"></i> Lưu Hóa đơn</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function reindex() {
            const tbody = document.querySelector('#itemsTable tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            rows.forEach((tr, idx) => {
                tr.querySelectorAll('select, input').forEach(el => {
                    const name = el.getAttribute('name') || '';
                    el.setAttribute('name', name.replace(/Items\[\d+\]/, `Items[${idx}]`));
                });
            });
        }

        function addRow() {
            const tbody = document.querySelector('#itemsTable tbody');
            const idx = tbody.querySelectorAll('tr').length;
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td class="ps-4">
                    <select class="form-select table-input" name="Items[${idx}].ProductId" required>
                        <option value="">-- Chọn sản phẩm --</option>
                        ${getProductOptionsHtml()}
                    </select>
                </td>
                <td>
                    <input class="table-input text-center fw-bold" type="number" min="1" step="1" name="Items[${idx}].Qty" value="1" required />
                </td>
                <td>
                    <div class="input-group input-group-sm">
                        <input class="form-control table-input text-end" type="number" min="0" step="0.01" name="Items[${idx}].UnitPrice" value="0" required />
                        <span class="input-group-text bg-white border-start-0">đ</span>
                    </div>
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm text-danger btn-light rounded-circle" style="width:32px;height:32px;" onclick="removeRow(this)">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            `;
            tbody.appendChild(tr);
        }

        function removeRow(btn) {
            const tbody = document.querySelector('#itemsTable tbody');
            const tr = btn.closest('tr');
            if (!tr) return;
            tr.remove();
            if (tbody.querySelectorAll('tr').length === 0) addRow();
            reindex();
        }

        function getProductOptionsHtml() {
            return document.getElementById('productOptionsTemplate').innerHTML;
        }
    </script>

    <script type="text/template" id="productOptionsTemplate">
        @foreach (var p in products)
        {
                <text><option value="@p.Id">@p.Name (@p.SKU) - Tồn: @p.StockOnHand</option></text>
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}