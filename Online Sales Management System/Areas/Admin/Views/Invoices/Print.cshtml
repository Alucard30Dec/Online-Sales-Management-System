@model OnlineSalesManagementSystem.Domain.Entities.Invoice
@{
    Layout = null;
    var due = Math.Max(0m, Model.GrandTotal - Model.PaidAmount);
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Invoice @Model.InvoiceNo</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #fff;
        }

        .paper {
            max-width: 860px;
            margin: 24px auto;
        }

        @@media print {
            .no-print

        {
            display: none !important;
        }

        .paper {
            margin: 0;
            max-width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="paper">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <div class="h4 mb-0">INVOICE</div>
                <div class="text-muted">No: <span class="fw-semibold">@Model.InvoiceNo</span></div>
                <div class="text-muted">Date: <span class="fw-semibold">@Model.InvoiceDate.ToString("yyyy-MM-dd")</span></div>
            </div>

            <div class="text-end">
                <div class="fw-semibold">Online Sales Management System</div>
                <div class="text-muted small">Print view</div>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-12 col-md-6">
                <div class="border rounded-3 p-3">
                    <div class="fw-semibold mb-1">Bill to</div>
                    <div>@(Model.Customer?.Name ?? "Walk-in Customer")</div>
                    <div class="text-muted small">@Model.Customer?.Phone</div>
                    <div class="text-muted small">@Model.Customer?.Email</div>
                    <div class="text-muted small">@Model.Customer?.Address</div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="border rounded-3 p-3">
                    <div class="fw-semibold mb-1">Summary</div>
                    <div class="d-flex justify-content-between"><span class="text-muted">Total</span><span class="fw-semibold">@Model.GrandTotal.ToString("N0")</span></div>
                    <div class="d-flex justify-content-between"><span class="text-muted">Paid</span><span class="fw-semibold">@Model.PaidAmount.ToString("N0")</span></div>
                    <div class="d-flex justify-content-between"><span class="text-muted">Due</span><span class="fw-semibold">@due.ToString("N0")</span></div>
                    <div class="d-flex justify-content-between mt-1"><span class="text-muted">Status</span><span class="fw-semibold">@Model.Status</span></div>
                </div>
            </div>
        </div>

        <div class="border rounded-3">
            <table class="table table-sm table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:70px;">#</th>
                        <th>Item</th>
                        <th style="width:110px;" class="text-end">Qty</th>
                        <th style="width:160px;" class="text-end">Unit Price</th>
                        <th style="width:180px;" class="text-end">Line Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null)
                    {
                        foreach (var it in Model.Items)
                        {
                            <tr>
                                <td>@it.Id</td>
                                <td class="fw-semibold">@it.Product?.Name</td>
                                <td class="text-end">@it.Qty</td>
                                <td class="text-end">@it.UnitPrice.ToString("N0")</td>
                                <td class="text-end">@it.LineTotal.ToString("N0")</td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="4" class="text-end fw-semibold">SubTotal</td>
                        <td class="text-end fw-semibold">@Model.SubTotal.ToString("N0")</td>
                    </tr>
                    <tr>
                        <td colspan="4" class="text-end fw-semibold">GrandTotal</td>
                        <td class="text-end fw-semibold">@Model.GrandTotal.ToString("N0")</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex gap-2 mt-3 no-print">
            <button class="btn btn-primary" onclick="window.print()">Print</button>
            <a class="btn btn-outline-secondary" href="/Admin/Invoices/Details/@Model.Id">Back</a>
        </div>

        <div class="text-muted small mt-3">
            Thank you!
        </div>
    </div>
</body>
</html>
