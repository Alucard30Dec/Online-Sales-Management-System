@model List<OnlineSalesManagementSystem.Domain.Entities.Category>
@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    /* Toggle Switch Styles */
    .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 22px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #0d6efd;
    }

        input:checked + .slider:before {
            transform: translateX(18px);
        }
</style>

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <div><h2 class="mt-4 fw-bold text-dark">Danh mục sản phẩm</h2></div>
        <a href="/Admin/Categories/Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus me-1"></i> Thêm mới</a>
    </div>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th class="text-center">Trending</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    <label class="switch">
                                        <input type="checkbox" onchange="toggleTrending(@item.Id)" @(item.IsTrending ? "checked" : "")>
                                        <span class="slider"></span>
                                    </label>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/Admin/Categories/Edit/@item.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                                    <a href="/Admin/Categories/Delete/@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleTrending(id) {
            fetch('/Admin/Categories/ToggleTrending/' + id, { method: 'POST' });
        }
    </script>
}