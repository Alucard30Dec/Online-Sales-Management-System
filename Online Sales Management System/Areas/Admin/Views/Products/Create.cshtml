@model OnlineSalesManagementSystem.Domain.Entities.Product
@using OnlineSalesManagementSystem.Domain.Entities
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.Categories as List<Category> ?? new();
    var units = ViewBag.Units as List<Unit> ?? new();
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 mb-0">Create Product</h1>
            <div class="text-muted">Add a new product.</div>
        </div>
        <a class="btn btn-outline-secondary" href="/Admin/Products">Back</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(excludePropertyErrors: false)
                </div>
            }

            <form method="post" action="/Admin/Products/Create" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-12 col-lg-6">
                    <label class="form-label">SKU <span class="text-danger">*</span></label>
                    <input class="form-control" name="SKU" value="@Model.SKU" maxlength="50" required />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Name <span class="text-danger">*</span></label>
                    <input class="form-control" name="Name" value="@Model.Name" maxlength="200" required />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Category</label>
                    <select class="form-select" name="CategoryId">
                        <option value="">-- None --</option>
                        @foreach (var c in categories)
                        {
                            var sel = (Model.CategoryId == c.Id) ? "selected" : "";
                            <option value="@c.Id" selected="@sel">@c.Name</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Unit</label>
                    <select class="form-select" name="UnitId">
                        <option value="">-- None --</option>
                        @foreach (var u in units)
                        {
                            var sel = (Model.UnitId == u.Id) ? "selected" : "";
                            <option value="@u.Id" selected="@sel">@u.Name</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Cost Price</label>
                    <input class="form-control" type="number" step="0.01" name="CostPrice" value="@Model.CostPrice" />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Sale Price</label>
                    <input class="form-control" type="number" step="0.01" name="SalePrice" value="@Model.SalePrice" />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Reorder Level</label>
                    <input class="form-control" type="number" name="ReorderLevel" value="@Model.ReorderLevel" />
                </div>

                <div class="col-12 col-lg-6">
                    <label class="form-label">Image URL</label>
                    <input class="form-control" name="ImagePath" value="@Model.ImagePath" />
                </div>

                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="IsTrending" name="IsTrending" value="true" @(Model.IsTrending ? "checked" : "")>
                        <label class="form-check-label fw-bold" for="IsTrending">
                            Set as Trending Product
                        </label>
                    </div>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-outline-secondary" href="/Admin/Products">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>