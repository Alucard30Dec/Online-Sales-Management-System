@model List<OnlineSalesManagementSystem.Domain.Entities.Product>
@using Microsoft.AspNetCore.Authorization
@using OnlineSalesManagementSystem.Services.Security
@using System.Globalization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string q = ViewBag.Query as string ?? "";
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 10);
    int total = (int)(ViewBag.Total ?? 0);
    int totalPages = pageSize <= 0 ? 0 : (int)Math.Ceiling(total / (double)pageSize);
    bool hasPrev = page > 1;
    bool hasNext = page < totalPages;
    int start = (page - 1) * pageSize + (total == 0 ? 0 : 1);
    int end = Math.Min(page * pageSize, total);

    string pCreate = PermissionConstants.PolicyPrefix + PermissionConstants.Modules.Products + "." + PermissionConstants.Actions.Create;
    string pEdit = PermissionConstants.PolicyPrefix + PermissionConstants.Modules.Products + "." + PermissionConstants.Actions.Edit;
    string pDelete = PermissionConstants.PolicyPrefix + PermissionConstants.Modules.Products + "." + PermissionConstants.Actions.Delete;
    bool canCreate = (await AuthorizationService.AuthorizeAsync(User, pCreate)).Succeeded;
    bool canEdit = (await AuthorizationService.AuthorizeAsync(User, pEdit)).Succeeded;
    bool canDelete = (await AuthorizationService.AuthorizeAsync(User, pDelete)).Succeeded;
}

<link rel="stylesheet" href="~/css/products-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">
    <div class="hero-header">
        <div class="d-flex justify-content-between align-items-center position-relative" style="z-index: 1;">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom mb-2">
                        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Sản phẩm</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center gap-3">
                    <h2 class="fw-bold text-dark mb-0">Danh sách sản phẩm</h2>
                    <span class="stat-badge"><i class="fas fa-check-circle"></i> @(Model?.Count() ?? 0) sản phẩm</span>
                </div>
                <p class="text-muted mt-2 mb-0">Quản lý kho hàng, giá bán và trạng thái hiển thị.</p>
            </div>

            @if (canCreate)
            {
                <a href="/Admin/Products/Create" class="btn btn-gradient shadow-lg px-4 py-3 rounded-pill d-flex align-items-center gap-2">
                    <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                        <i class="fas fa-plus fa-xs"></i>
                    </div>
                    <span class="fw-bold">Thêm mới</span>
                </a>
            }
        </div>
    </div>

    <div class="card card-modern mt-4">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
            <div class="row g-3 align-items-center">
                <div class="col-12 col-md-6">
                    <form method="get">
                        <div class="input-group shadow-sm" style="border-radius: 50px; overflow: hidden;">
                            <span class="input-group-text bg-white border-end-0 ps-3"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" name="q" value="@q" class="form-control border-start-0" placeholder="Tìm theo tên hoặc SKU...">
                            <button class="btn btn-outline-primary" type="submit">Tìm kiếm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="card-body px-0">
            <div class="table-responsive">
                <table class="table table-modern mb-0" id="productsTable">
                    <thead>
                        <tr>
                            <th class="ps-4">Sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Giá bán</th>
                            <th class="text-center">Kho</th>
                            <th class="text-center">Trending</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.ImagePath))
                                            {
                                                <img src="@item.ImagePath" class="product-thumb me-3" alt="Img" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                                            }
                                            else
                                            {
                                                <div class="product-thumb-placeholder me-3 d-flex align-items-center justify-content-center bg-light text-muted" style="width: 50px; height: 50px; border-radius: 8px;">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold text-dark">@item.Name</div>
                                                <div class="small text-muted">SKU: @item.SKU</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small fw-semibold text-dark">@item.Category?.Name</div>
                                        <div class="small text-muted">@item.Unit?.Name</div>
                                    </td>
                                    <td class="fw-bold text-primary">
                                        @item.SalePrice.ToString("N0") đ
                                    </td>
                                    <td class="text-center">
                                        @if (item.StockOnHand > item.ReorderLevel)
                                        {
                                            <span class="badge bg-success rounded-pill px-3">@item.StockOnHand</span>
                                        }
                                        else if (item.StockOnHand > 0)
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill px-3">@item.StockOnHand</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger rounded-pill px-3">Hết hàng</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="form-check form-switch d-flex justify-content-center">
                                            <input class="form-check-input" type="checkbox" onchange="toggleTrending(@item.Id)" @(item.IsTrending ? "checked" : "")>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-2">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill px-2">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        @if (canEdit)
                                        {
                                            <a href="/Admin/Products/Edit/@item.Id" class="btn btn-sm btn-outline-primary me-2"><i class="fas fa-pen"></i></a>
                                        }
                                        @if (canDelete)
                                        {
                                            <form method="post" action="/Admin/Products/Delete/@item.Id" class="d-inline" onsubmit="return confirm('Xóa sản phẩm này?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="fas fa-box-open fa-2x mb-2"></i><br>
                                    Chưa có sản phẩm nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 p-3">
                <div class="text-muted small">
                    Showing @start to @end of @total entries
                </div>

                <nav aria-label="Products pagination">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(hasPrev ? "" : "disabled")">
                            <a class="page-link" href="@BuildUrl(page - 1)">Prev</a>
                        </li>
                        @{
                            int s = Math.Max(1, page - 2);
                            int e = Math.Min(totalPages, page + 2);
                            for (int i = s; i <= e; i++)
                            {
                                <li class="page-item @(i == page ? "active" : "")">
                                    <a class="page-link" href="@BuildUrl(i)">@i</a>
                                </li>
                            }
                        }
                        <li class="page-item @(hasNext ? "" : "disabled")">
                            <a class="page-link" href="@BuildUrl(page + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@functions {
    private string BuildUrl(int page)
    {
        if (page < 1) page = 1;
        string q = ViewBag.Query as string ?? "";
        int pageSize = (int)(ViewBag.PageSize ?? 10);
        return $"/Admin/Products?q={Uri.EscapeDataString(q)}&page={page}&pageSize={pageSize}";
    }
}

@section Scripts {
    <script>
        // Hàm Toggle Trending
        function toggleTrending(id) {
            fetch('/Admin/Products/ToggleTrending/' + id, { method: 'POST' })
                .then(res => res.json())
                .then(data => {
                    if(!data.success) alert('Lỗi cập nhật!');
                })
                .catch(err => console.error(err));
        }
    </script>
}