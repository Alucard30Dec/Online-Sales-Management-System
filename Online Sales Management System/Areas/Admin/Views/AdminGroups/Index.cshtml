@model List<OnlineSalesManagementSystem.Domain.Entities.AdminGroup>
@{
    ViewData["Title"] = "Roles / Groups";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string q = ViewBag.Query as string ?? "";
}

<div class="container-fluid">
    <div class="d-flex align-items-start justify-content-between gap-3 mb-3">
        <div>
            <h1 class="h3 mb-0">Roles / Groups</h1>
            <div class="text-muted">Manage admin groups and their permission matrix.</div>
        </div>

        <a class="btn btn-primary" href="/Admin/AdminGroups/Create">+ New Group</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end mb-3">
                <div class="col-12 col-md-6 col-xl-4">
                    <label class="form-label small text-muted">Search</label>
                    <input class="form-control" name="q" value="@q" placeholder="Group name..." />
                </div>

                <div class="col-12 col-md-6 col-xl-3 d-flex gap-2">
                    <button class="btn btn-outline-primary w-100" type="submit">Search</button>
                    <a class="btn btn-outline-secondary w-100" href="/Admin/AdminGroups">Reset</a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="table-light">
                            <th style="width:90px;">#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th style="width:260px;" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr><td colspan="4" class="text-center text-muted py-4">No groups found.</td></tr>
                        }
                        else
                        {
                            foreach (var g in Model)
                            {
                                <tr>
                                    <td>@g.Id</td>
                                    <td class="fw-semibold">@g.Name</td>
                                    <td class="text-muted">@g.Description</td>
                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <a class="btn btn-sm btn-outline-secondary" href="/Admin/AdminGroups/Permissions/@g.Id">Permissions</a>
                                            <a class="btn btn-sm btn-outline-primary" href="/Admin/AdminGroups/Edit/@g.Id">Edit</a>
                                            <form method="post" action="/Admin/AdminGroups/Delete/@g.Id" class="m-0"
                                                  onsubmit="return confirm('Delete this group?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-muted small mt-2">
                Tip: Use “Permissions” to toggle Show/Create/Edit/Delete per module.
            </div>
        </div>
    </div>
</div>
