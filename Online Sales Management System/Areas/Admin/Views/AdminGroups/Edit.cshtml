@model OnlineSalesManagementSystem.Domain.Entities.AdminGroup
@{
    ViewData["Title"] = "Edit Group";

    bool isSuperGroup = IsSuperAdminGroupName(Model.Name);
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-edit mr-1"></i> Edit Group</h3>
        <div class="card-tools">
            <a class="btn btn-tool" href="/Admin/AdminGroups" data-toggle="tooltip" title="Back"><i class="fas fa-arrow-left"></i></a>
        </div>
    </div>

    <div class="card-body">
        @if (isSuperGroup)
        {
            <div class="alert alert-warning">
                <i class="fas fa-lock mr-1"></i>
                The <b>Super Admin</b> group is protected. You cannot edit or delete it.
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(excludePropertyErrors: true)
            </div>
        }

        <form method="post" action="/Admin/AdminGroups/Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name">Name <span class="text-danger">*</span></label>
                @if (isSuperGroup)
                {
                    <input type="hidden" asp-for="Name" />
                    <input class="form-control" value="@Model.Name" disabled />
                }
                else
                {
                    <input class="form-control" asp-for="Name" maxlength="120" required />
                }
                <span class="text-danger small" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                @if (isSuperGroup)
                {
                    <input type="hidden" asp-for="Description" />
                    <textarea class="form-control" rows="3" disabled>@Model.Description</textarea>
                }
                else
                {
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                }
                <span class="text-danger small" asp-validation-for="Description"></span>
            </div>

            <div class="d-flex gap-2">
                @if (!isSuperGroup)
                {
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-1"></i> Save</button>
                }
                <a class="btn btn-default" href="/Admin/AdminGroups">Cancel</a>

                @if (!isSuperGroup)
                {
                    <a class="btn btn-outline-secondary ml-auto" href="/Admin/AdminGroups/Permissions/@Model.Id"><i class="fas fa-th-large mr-1"></i> Permissions</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@functions {
    private static bool IsSuperAdminGroupName(string? name)
        => !string.IsNullOrWhiteSpace(name) && string.Equals(name.Trim(), "Super Admin", StringComparison.OrdinalIgnoreCase);
}
