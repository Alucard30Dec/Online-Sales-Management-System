@model OnlineSalesManagementSystem.Domain.Entities.AdminGroup
@{
    ViewData["Title"] = "Edit Group";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 mb-0">Edit Group</h1>
            <div class="text-muted">Update group information.</div>
        </div>
        <a class="btn btn-outline-secondary" href="/Admin/AdminGroups">Back</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>
            }

            <form method="post" action="/Admin/AdminGroups/Edit" class="row g-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="col-12">
                    <label class="form-label" asp-for="Name">Name <span class="text-danger">*</span></label>
                    <input class="form-control" asp-for="Name" maxlength="120" required />
                    <span class="text-danger small" asp-validation-for="Name"></span>
                </div>

                <div class="col-12">
                    <label class="form-label" asp-for="Description">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                    <span class="text-danger small" asp-validation-for="Description"></span>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <a class="btn btn-outline-secondary" href="/Admin/AdminGroups">Cancel</a>
                    <a class="btn btn-outline-secondary ms-auto" href="/Admin/AdminGroups/Permissions/@Model.Id">Permissions</a>
                </div>
            </form>
        </div>
    </div>
</div>
