@model OnlineSalesManagementSystem.Domain.Entities.Expense
@{
    ViewData["Title"] = "Sửa khoản chi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/expenses-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">
    <div class="hero-header d-flex justify-content-between align-items-center">
        <i class="fas fa-edit hero-icon-bg"></i>
        <div style="z-index: 1;">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-custom mb-2">
                    <li class="breadcrumb-item"><a href="/Admin/Expenses">Chi phí</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
            <h2 class="fw-bold text-dark mb-0">Cập nhật phiếu chi</h2>
        </div>
        <div style="z-index: 1;">
            <a href="/Admin/Expenses" class="btn btn-outline-secondary rounded-pill px-4"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card card-modern p-4">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger shadow-sm border-0 rounded-3 mb-4">
                        @Html.ValidationSummary(excludePropertyErrors: false)
                    </div>
                }

                <form method="post" action="/Admin/Expenses/Edit" class="row g-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="col-12">
                        <label class="form-label fw-bold text-muted">Nội dung chi <span class="text-danger">*</span></label>
                        <input class="form-control form-control-lg" name="Title" value="@Model.Title" maxlength="200" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Số tiền</label>
                        <div class="input-group">
                            <input class="form-control fw-bold text-danger" name="Amount" value="@Model.Amount" type="number" step="0.01" min="0" required />
                            <span class="input-group-text bg-white">VNĐ</span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">Ngày chi</label>
                        <input class="form-control" name="ExpenseDate" value="@(Model.ExpenseDate.ToString("yyyy-MM-dd"))" type="date" required />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold text-muted">Ghi chú thêm</label>
                        <textarea class="form-control" name="Note" rows="4">@Model.Note</textarea>
                    </div>

                    <div class="col-12 d-flex justify-content-end gap-3 mt-4">
                        <a href="/Admin/Expenses" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                        <button type="submit" class="btn btn-gradient rounded-pill px-5 shadow fw-bold">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>