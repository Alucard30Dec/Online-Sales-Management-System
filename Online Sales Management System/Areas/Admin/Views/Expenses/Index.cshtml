@model List<OnlineSalesManagementSystem.Domain.Entities.Expense>
@using Microsoft.AspNetCore.Authorization
@using OnlineSalesManagementSystem.Services.Security
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Quản lý Chi phí";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string from = ViewBag.From as string ?? "";
    string to = ViewBag.To as string ?? "";
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 10);
    int total = (int)(ViewBag.Total ?? 0);

    int totalPages = pageSize <= 0 ? 0 : (int)Math.Ceiling(total / (double)pageSize);
    bool hasPrev = page > 1;
    bool hasNext = page < totalPages;
    int start = (page - 1) * pageSize + (total == 0 ? 0 : 1);
    int end = Math.Min(page * pageSize, total);

    // Quyền hạn
    bool canCreate = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Expenses, PermissionConstants.Actions.Create))).Succeeded;
    bool canEdit = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Expenses, PermissionConstants.Actions.Edit))).Succeeded;
    bool canDelete = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Expenses, PermissionConstants.Actions.Delete))).Succeeded;
}

<link rel="stylesheet" href="~/css/expenses-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">

    <div class="hero-header">
        <i class="fas fa-coins hero-icon-bg"></i>
        <div class="d-flex justify-content-between align-items-center position-relative" style="z-index: 1;">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom mb-2">
                        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Chi phí</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center gap-3">
                    <h2 class="fw-bold text-dark mb-0">Sổ chi phí</h2>
                    <span class="stat-badge"><i class="fas fa-wallet"></i> @total phiếu</span>
                </div>
                <p class="text-muted mt-2 mb-0">Theo dõi các khoản chi tiêu vận hành, nhập hàng và các chi phí khác.</p>
            </div>

            @if (canCreate)
            {
                <a href="/Admin/Expenses/Create" class="btn btn-gradient shadow-lg px-4 py-3 rounded-pill d-flex align-items-center gap-2">
                    <div class="bg-white text-danger rounded-circle d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                        <i class="fas fa-plus fa-xs"></i>
                    </div>
                    <span class="fw-bold">Thêm khoản chi</span>
                </a>
            }
        </div>
    </div>

    <div class="card card-modern">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
            <form method="get" class="row g-3 align-items-end" action="/Admin/Expenses">
                <input type="hidden" name="page" value="1" />

                <div class="col-12 col-md-3">
                    <label class="form-label small fw-bold text-muted mb-1">Từ ngày</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-white border-end-0"><i class="far fa-calendar-alt text-muted"></i></span>
                        <input class="form-control border-start-0" type="date" name="from" value="@from" />
                    </div>
                </div>

                <div class="col-12 col-md-3">
                    <label class="form-label small fw-bold text-muted mb-1">Đến ngày</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-white border-end-0"><i class="far fa-calendar-alt text-muted"></i></span>
                        <input class="form-control border-start-0" type="date" name="to" value="@to" />
                    </div>
                </div>

                <div class="col-6 col-md-2">
                    <label class="form-label small fw-bold text-muted mb-1">Hiển thị</label>
                    <select class="form-select shadow-sm" name="pageSize" onchange="this.form.submit()">
                        @{
                            var sizes = new[] { 10, 25, 50, 100 };
                        }
                        @foreach (var s in sizes)
                        {
                            <option value="@s" selected="@(s == pageSize ? "selected" : null)">@s dòng</option>
                        }
                    </select>
                </div>

                <div class="col-auto">
                    <button class="btn btn-outline-danger shadow-sm px-4" type="submit"><i class="fas fa-filter me-1"></i> Lọc</button>
                    <a class="btn btn-light shadow-sm px-3 ms-2" href="/Admin/Expenses"><i class="fas fa-sync-alt"></i></a>
                </div>
            </form>
        </div>

        <div class="card-body px-0 pt-4">
            <div class="table-responsive">
                <table class="table table-modern mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4 text-center">#ID</th>
                            <th>Ngày chi</th>
                            <th>Khoản chi (Nội dung)</th>
                            <th>Ghi chú</th>
                            <th class="text-end pe-4">Số tiền</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || Model.Count == 0)
                        {
                            <tr><td colspan="6" class="text-center py-5 text-muted">Không có dữ liệu chi phí.</td></tr>
                        }
                        else
                        {
                            foreach (var exp in Model)
                            {
                                <tr>
                                    <td class="ps-4 text-center text-muted">@exp.Id</td>
                                    <td>
                                        <div class="fw-semibold text-dark">@exp.ExpenseDate.ToString("dd/MM/yyyy")</div>
                                    </td>
                                    <td><span class="fw-bold text-dark">@exp.Title</span></td>
                                    <td class="text-muted small">@exp.Note</td>
                                    <td class="text-end pe-4">
                                        <span class="fw-bold text-danger">- @exp.Amount.ToString("N0") đ</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            @if (canEdit)
                                            {
                                                <a href="/Admin/Expenses/Edit/@exp.Id" class="btn btn-icon edit me-2" title="Sửa"><i class="fas fa-pen fa-xs"></i></a>
                                            }
                                            @if (canDelete)
                                            {
                                                <a href="/Admin/Expenses/Delete/@exp.Id" class="btn btn-icon delete" title="Xóa" onclick="return confirm('Xóa khoản chi này?');"><i class="fas fa-trash fa-xs"></i></a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (totalPages > 1)
        {
            <div class="card-footer bg-white border-top-0 d-flex align-items-center justify-content-between py-3 px-4">
                <div class="text-muted small">Hiển thị @start - @end trong @total dòng</div>
                <nav>
                    <ul class="pagination pagination-sm mb-0 shadow-sm">
                        <li class="page-item @(hasPrev ? "" : "disabled")"><a class="page-link rounded-start" href="@BuildUrl(page - 1, from, to, pageSize)">Trước</a></li>
                        @{
                            int s = Math.Max(1, page - 2); int e = Math.Min(totalPages, page + 2);
                            for (int p = s; p <= e; p++)
                            {
                                <li class="page-item @(p == page ? "active" : "")"><a class="page-link" href="@BuildUrl(p, from, to, pageSize)">@p</a></li>
                            }
                        }
                        <li class="page-item @(hasNext ? "" : "disabled")"><a class="page-link rounded-end" href="@BuildUrl(page + 1, from, to, pageSize)">Sau</a></li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@functions {
    string BuildUrl(int p, string f, string t, int s)
    {
        var qs = new List<string>();
        if (!string.IsNullOrWhiteSpace(f)) qs.Add($"from={Uri.EscapeDataString(f)}");
        if (!string.IsNullOrWhiteSpace(t)) qs.Add($"to={Uri.EscapeDataString(t)}");
        qs.Add($"page={p}");
        qs.Add($"pageSize={s}");
        return "/Admin/Expenses" + (qs.Count > 0 ? "?" + string.Join("&", qs) : "");
    }
}