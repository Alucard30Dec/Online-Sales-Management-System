@model List<OnlineSalesManagementSystem.Domain.Entities.Expense>
@using Microsoft.AspNetCore.Authorization
@using OnlineSalesManagementSystem.Services.Security
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Expenses";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string from = ViewBag.From as string ?? "";
    string to = ViewBag.To as string ?? "";
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 10);
    int total = (int)(ViewBag.Total ?? 0);

    int totalPages = pageSize <= 0 ? 0 : (int)Math.Ceiling(total / (double)pageSize);
    bool hasPrev = page > 1;
    bool hasNext = page < totalPages;

    int start = (page - 1) * pageSize + (total == 0 ? 0 : 1);
    int end = Math.Min(page * pageSize, total);

    string BuildUrl(int p)
    {
        var qs = new List<string>();
        if (!string.IsNullOrWhiteSpace(from)) qs.Add($"from={Uri.EscapeDataString(from)}");
        if (!string.IsNullOrWhiteSpace(to)) qs.Add($"to={Uri.EscapeDataString(to)}");
        qs.Add($"page={p}");
        qs.Add($"pageSize={pageSize}");
        return "/Admin/Expenses" + (qs.Count > 0 ? "?" + string.Join("&", qs) : "");
    }

    bool canCreate = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Expenses, PermissionConstants.Actions.Create))).Succeeded;
    bool canEdit = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Expenses, PermissionConstants.Actions.Edit))).Succeeded;
    bool canDelete = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Expenses, PermissionConstants.Actions.Delete))).Succeeded;
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h3 class="mb-0">Expenses</h3>
        <div class="text-muted small">Showing @start to @end of @total entries</div>
    </div>
    <div class="d-flex gap-2">
        @if (canCreate)
        {
            <a class="btn btn-primary" href="/Admin/Expenses/Create">
                <i class="bi bi-plus-lg me-1"></i> New Expense
            </a>
        }
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form class="row g-2 align-items-end mb-3" method="get" action="/Admin/Expenses">
            <div class="col-12 col-md-3">
                <label class="form-label small text-muted">From</label>
                <input class="form-control" type="date" name="from" value="@from" />
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small text-muted">To</label>
                <input class="form-control" type="date" name="to" value="@to" />
            </div>
            <div class="col-12 col-md-3 col-xl-2">
                <label class="form-label small text-muted">Show entries</label>
                <select class="form-select" name="pageSize">
                    @{
                        var sizes = new[] { 10, 25, 50, 100 };
                        foreach (var sizeVal in sizes)
                        {
                            var selected = (sizeVal == pageSize) ? "selected" : null;
                            <option value="@sizeVal" selected="@selected">@sizeVal</option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-3 col-xl-2 d-flex gap-2">
                <button class="btn btn-outline-primary w-100" type="submit">Filter</button>
                <a class="btn btn-outline-secondary w-100" href="/Admin/Expenses">Reset</a>
            </div>
            <input type="hidden" name="page" value="1" />
        </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 90px;">#</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th class="text-end" style="width: 160px;">Amount</th>
                        <th class="text-end" style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No data</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var exp in Model)
                        {
                            <tr>
                                <td>@exp.Id</td>
                                <td>@exp.ExpenseDate.ToString("yyyy-MM-dd")</td>
                                <td>@exp.Title</td>
                                <td>@exp.Note</td>
                                <td class="text-end">@exp.Amount.ToString("N0")</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        @if (canEdit)
                                        {
                                            <a class="btn btn-sm btn-outline-primary" href="/Admin/Expenses/Edit/@exp.Id">Edit</a>
                                        }
                                        <a class="btn btn-sm btn-outline-secondary" href="/Admin/Expenses/Details/@exp.Id">Details</a>
                                        @if (canDelete)
                                        {
                                            <a class="btn btn-sm btn-outline-danger" href="/Admin/Expenses/Delete/@exp.Id">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination mb-0">
                    <li class="page-item @(hasPrev ? "" : "disabled")">
                        <a class="page-link" href="@(hasPrev? BuildUrl(page - 1) : "#")">Prev</a>
                    </li>

                    @{
                        int startPage = Math.Max(1, page - 2);
                        int endPage = Math.Min(totalPages, page + 2);

                        for (int p = startPage; p <= endPage; p++)
                        {
                            <li class="page-item @(p == page ? "active" : "")">
                                <a class="page-link" href="@BuildUrl(p)">@p</a>
                            </li>
                        }
                    }

                    <li class="page-item @(hasNext ? "" : "disabled")">
                        <a class="page-link" href="@(hasNext? BuildUrl(page + 1) : "#")">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
