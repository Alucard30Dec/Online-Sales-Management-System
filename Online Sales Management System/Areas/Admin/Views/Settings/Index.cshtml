@model OnlineSalesManagementSystem.Domain.Entities.Setting
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-start justify-content-between gap-3 mb-3">
        <div>
            <h1 class="h3 mb-0">Settings</h1>
            <div class="text-muted">Company info, currency, logo upload.</div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-7">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(excludePropertyErrors: true)
                        </div>
                    }

                    <form method="post" action="/Admin/Settings" enctype="multipart/form-data" class="row g-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="col-12">
                            <label class="form-label" asp-for="CompanyName">Company name <span class="text-danger">*</span></label>
                            <input class="form-control" asp-for="CompanyName" maxlength="200" required />
                            <span class="text-danger small" asp-validation-for="CompanyName"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Currency">Currency</label>
                            <input class="form-control" asp-for="Currency" maxlength="10" placeholder="VND" />
                            <span class="text-danger small" asp-validation-for="Currency"></span>
                            <div class="text-muted small mt-1">Example: VND, USD…</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Logo (optional)</label>
                            <input class="form-control" type="file" name="logoFile" accept=".png,.jpg,.jpeg,.webp" />
                            <div class="text-muted small mt-1">Allowed: .png .jpg .jpeg .webp</div>
                        </div>

                        <div class="col-12 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save settings</button>
                            <a class="btn btn-outline-secondary" href="/Admin/Dashboard">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-5">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <div class="fw-semibold">Preview</div>
                </div>
                <div class="card-body">
                    <div class="mb-2 text-muted small">Current logo</div>

                    @if (!string.IsNullOrWhiteSpace(Model.LogoPath))
                    {
                        <div class="border rounded-3 p-3 text-center">
                            <img src="@Model.LogoPath" alt="Logo" style="max-width: 100%; max-height: 160px;" />
                        </div>
                        <div class="text-muted small mt-2">Path: <code>@Model.LogoPath</code></div>
                    }
                    else
                    {
                        <div class="border rounded-3 p-3 text-center text-muted">
                            No logo uploaded.
                        </div>
                    }

                    <hr />

                    <div class="mb-1 text-muted small">Company name</div>
                    <div class="fw-semibold">@Model.CompanyName</div>

                    <div class="mt-3 mb-1 text-muted small">Currency</div>
                    <div class="fw-semibold">@Model.Currency</div>
                </div>
            </div>
        </div>
    </div>
</div>
