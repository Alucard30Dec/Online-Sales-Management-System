@model OnlineSalesManagementSystem.Domain.Entities.Setting
@{
    ViewData["Title"] = "Cài đặt Hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/settings-ui.css" />

<div class="container-fluid py-4" style="background-color: #f8f9fc;">

    <div class="hero-header">
        <i class="fas fa-cogs hero-icon-bg"></i>
        <div class="d-flex justify-content-between align-items-center position-relative" style="z-index: 1;">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom mb-2">
                        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Cài đặt</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center gap-3">
                    <h2 class="fw-bold text-dark mb-0">Cấu hình hệ thống</h2>
                </div>
                <p class="text-muted mt-2 mb-0">Thiết lập thông tin công ty, tiền tệ và logo hiển thị.</p>
            </div>

            <a href="/Admin/Dashboard" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i>Quay lại Dashboard
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-7">
            <div class="card card-modern h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h5 class="fw-bold text-dark mb-0"><i class="fas fa-sliders-h me-2 text-secondary"></i>Thông tin chung</h5>
                </div>

                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger shadow-sm border-0 rounded-3 mb-4">
                            @Html.ValidationSummary(excludePropertyErrors: true)
                        </div>
                    }

                    <form method="post" action="/Admin/Settings" enctype="multipart/form-data" class="row g-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="col-12">
                            <label class="form-label fw-bold text-muted" asp-for="CompanyName">Tên công ty / Cửa hàng <span class="text-danger">*</span></label>
                            <input class="form-control form-control-lg" asp-for="CompanyName" maxlength="200" required placeholder="Nhập tên doanh nghiệp..." />
                            <span class="text-danger small" asp-validation-for="CompanyName"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold text-muted" asp-for="Currency">Đơn vị tiền tệ</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-money-bill-wave text-muted"></i></span>
                                <input class="form-control" asp-for="Currency" maxlength="10" placeholder="VND, USD..." />
                            </div>
                            <span class="text-danger small" asp-validation-for="Currency"></span>
                            <div class="text-muted small mt-1 fst-italic">Ví dụ: VND, $...</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold text-muted">Logo (Tùy chọn)</label>
                            <input class="form-control" type="file" name="logoFile" accept=".png,.jpg,.jpeg,.webp" id="logoInput" />
                            <div class="text-muted small mt-1">Hỗ trợ: .png .jpg .jpeg .webp</div>
                        </div>

                        <div class="col-12 mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-gradient rounded-pill px-5 py-2 fw-bold shadow-sm">
                                <i class="fas fa-save me-2"></i>Lưu cấu hình
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-5">
            <div class="card card-modern h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h5 class="fw-bold text-dark mb-0"><i class="fas fa-eye me-2 text-secondary"></i>Xem trước hiển thị</h5>
                </div>

                <div class="card-body p-4">
                    <label class="form-label fw-bold text-muted mb-2">Logo hiện tại</label>

                    @if (!string.IsNullOrWhiteSpace(Model.LogoPath))
                    {
                        <div class="preview-box mb-3">
                            <img src="@Model.LogoPath" alt="Logo" class="preview-logo" id="logoPreview" />
                        </div>
                        <div class="d-flex align-items-center justify-content-center gap-2 text-muted small bg-light p-2 rounded">
                            <i class="fas fa-link"></i> Path: <code class="text-dark">@Model.LogoPath</code>
                        </div>
                    }
                    else
                    {
                        <div class="preview-box mb-3 text-muted">
                            <i class="fas fa-image fa-3x mb-3 opacity-25"></i>
                            <p class="mb-0">Chưa có logo được tải lên.</p>
                        </div>
                    }

                    <hr class="my-4 border-secondary border-opacity-10" />

                    <div class="row g-3">
                        <div class="col-6">
                            <div class="text-uppercase text-muted small fw-bold mb-1">Tên hiển thị</div>
                            <div class="h5 text-dark fw-bold mb-0">@Model.CompanyName</div>
                        </div>
                        <div class="col-6">
                            <div class="text-uppercase text-muted small fw-bold mb-1">Tiền tệ</div>
                            <div class="h5 text-primary fw-bold mb-0">@Model.Currency</div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light border-top-0 p-3">
                    <div class="d-flex align-items-center gap-3 text-muted small">
                        <i class="fas fa-info-circle fa-lg"></i>
                        <span>Các thay đổi này sẽ ảnh hưởng toàn bộ hệ thống ngay sau khi lưu.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Script đơn giản để preview ảnh khi chọn file (nâng cao trải nghiệm)
        document.getElementById('logoInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                const preview = document.getElementById('logoPreview');
                if(preview) {
                    preview.src = URL.createObjectURL(file);
                }
            }
        };
    </script>
}