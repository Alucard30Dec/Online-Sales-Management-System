@model OnlineSalesManagementSystem.Domain.Entities.Supplier
@{
    ViewData["Title"] = "Thêm mới NCC";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/suppliers.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1 text-dark">Thêm Nhà Cung Cấp</h1>
            <p class="text-muted small mb-0">Thêm đối tác mới vào hệ thống.</p>
        </div>
        <a class="btn btn-light border shadow-sm rounded-pill px-3" href="/Admin/Suppliers">
            <i class="fa fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="card card-modern border-0 shadow-sm rounded-4">
        <div class="card-body p-4">
            <div asp-validation-summary="All" class="alert alert-danger shadow-sm rounded-3 mb-4 small" role="alert">
                <i class="fa fa-exclamation-triangle me-2"></i> Vui lòng kiểm tra lại thông tin bên dưới:
            </div>

            <form method="post" action="/Admin/Suppliers/Create" class="row g-4">
                @Html.AntiForgeryToken()

                <div class="col-12">
                    <h6 class="text-uppercase text-muted fw-bold small border-bottom pb-2 mb-3">Thông tin chung</h6>
                </div>

                <div class="col-md-12">
                    <label class="form-label fw-bold small text-secondary">Tên Nhà Cung Cấp <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-building"></i></span>
                        <input class="form-control" name="Name" value="@Model.Name" placeholder="Ví dụ: Công ty FPT Trading" maxlength="150" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold small text-secondary">Số điện thoại</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-phone"></i></span>
                        <input class="form-control" name="Phone" value="@Model.Phone" placeholder="Ví dụ: 0901234567" maxlength="30" />
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold small text-secondary">Địa chỉ Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        <input class="form-control" name="Email" value="@Model.Email" placeholder="lienhe@doitac.com" maxlength="150" type="email" />
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label fw-bold small text-secondary">Địa chỉ</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-map-marker"></i></span>
                        <input class="form-control" name="Address" value="@Model.Address" placeholder="Nhập địa chỉ đầy đủ..." maxlength="300" />
                    </div>
                </div>

                <div class="col-12 d-flex gap-2 pt-3 border-top mt-2">
                    <button type="submit" class="btn btn-warning text-white fw-bold px-4 shadow-sm rounded-pill">
                        <i class="fa fa-save me-2"></i>Tạo mới
                    </button>
                    <a class="btn btn-light border px-4 rounded-pill" href="/Admin/Suppliers">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>