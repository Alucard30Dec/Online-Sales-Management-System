@model List<OnlineSalesManagementSystem.Domain.Entities.Supplier>
@{
    ViewData["Title"] = "Quản lý Nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // Logic phân trang
    string q = ViewBag.Query as string ?? "";
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 10);
    int total = (int)(ViewBag.Total ?? 0);
    int totalPages = pageSize <= 0 ? 0 : (int)Math.Ceiling(total / (double)pageSize);
    bool hasPrev = page > 1;
    bool hasNext = page < totalPages;
    int start = (page - 1) * pageSize + (total == 0 ? 0 : 1);
    int end = Math.Min(page * pageSize, total);
}

<link rel="stylesheet" href="~/css/suppliers.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h3 class="page-header-title mb-1">Danh sách Nhà cung cấp</h3>
            <p class="text-muted mb-0 small">Quản lý nguồn hàng và đối tác kinh doanh.</p>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <a class="btn btn-warning text-white btn-sm px-4 py-2 shadow-sm fw-bold rounded-pill" href="/Admin/Suppliers/Create">
                <i class="fa fa-plus me-2"></i>Thêm mới
            </a>
        </div>
    </div>

    <div class="card card-modern mb-4">
        <div class="card-body p-3">
            <form method="get" action="/Admin/Suppliers" class="row g-3 align-items-center">
                <div class="col-12 col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="fa fa-search text-muted"></i></span>
                        <input class="form-control border-start-0 bg-light" name="q" value="@q" placeholder="Tìm tên NCC, số điện thoại..." />
                    </div>
                </div>

                <div class="col-6 col-md-2">
                    <select class="form-select bg-light border-0" name="pageSize" onchange="this.form.submit()">
                        @{
                            var sizes = new[] { 10, 25, 50, 100 };
                            foreach (var s in sizes)
                            {
                                <option value="@s" selected="@(s == pageSize ? "selected" : null)">Hiển thị @s</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-6 col-md-5 text-end">
                    <button class="btn btn-warning text-white px-4 rounded-pill fw-bold" type="submit">Lọc dữ liệu</button>
                    <a class="btn btn-light px-3 rounded-pill ms-1 border" href="/Admin/Suppliers"><i class="fa fa-undo"></i></a>
                </div>
                <input type="hidden" name="page" value="1" />
            </form>
        </div>
    </div>

    <div class="card card-modern">
        <div class="table-responsive">
            <table class="table table-modern mb-0 align-middle">
                <thead>
                    <tr>
                        <th class="ps-4">Tên Nhà Cung Cấp</th>
                        <th>Thông tin liên hệ</th>
                        <th>Địa chỉ</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fa fa-dropbox fa-3x mb-3 text-warning opacity-25"></i>
                                    <p class="mb-0 fw-bold">Không tìm thấy dữ liệu.</p>
                                    <small>Vui lòng thử từ khóa tìm kiếm khác.</small>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var s in Model)
                        {
                            var firstLetter = string.IsNullOrEmpty(s.Name) ? "S" : s.Name.Substring(0, 1).ToUpper();

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-supplier flex-shrink-0">
                                            @firstLetter
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@s.Name</div>
                                            <div class="small text-muted">ID: #@s.Id</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <div class="small text-dark"><i class="fa fa-phone text-warning me-2" style="width:16px"></i>@s.Phone</div>
                                        <div class="small text-muted"><i class="fa fa-envelope text-secondary me-2" style="width:16px"></i>@s.Email</div>
                                    </div>
                                </td>
                                <td class="text-secondary small" style="max-width: 280px;">
                                    <i class="fa fa-map-marker text-danger opacity-50 me-1"></i> @s.Address
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/Admin/Suppliers/Details/@s.Id" class="btn-action details me-1" title="Xem chi tiết">
                                        <i class="fa fa-eye small"></i>
                                    </a>
                                    <a href="/Admin/Suppliers/Edit/@s.Id" class="btn-action edit me-1" title="Chỉnh sửa">
                                        <i class="fa fa-edit small"></i>
                                    </a>
                                    <a href="/Admin/Suppliers/Delete/@s.Id" class="btn-action delete" title="Xóa">
                                        <i class="fa fa-trash small"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <div class="card-footer bg-white border-0 py-3 d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="text-muted small mb-2 mb-md-0">
                    Hiển thị <strong>@start</strong> đến <strong>@end</strong> trong tổng số <strong>@total</strong> bản ghi
                </div>

                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(hasPrev ? "" : "disabled")">
                            <a class="page-link border-0 rounded-circle mx-1" href="@(hasPrev? BuildUrl(page - 1) : "#")"><i class="fa fa-chevron-left"></i></a>
                        </li>

                        @{
                            int startPage = Math.Max(1, page - 2);
                            int endPage = Math.Min(totalPages, page + 2);
                            for (int p = startPage; p <= endPage; p++)
                            {
                                <li class="page-item @(p == page ? "active" : "")">
                                    <a class="page-link border-0 rounded-circle mx-1 @(p == page ? "bg-warning border-warning text-white shadow-sm" : "text-secondary")" href="@BuildUrl(p)">@p</a>
                                </li>
                            }
                        }

                        <li class="page-item @(hasNext ? "" : "disabled")">
                            <a class="page-link border-0 rounded-circle mx-1" href="@(hasNext? BuildUrl(page + 1) : "#")"><i class="fa fa-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@functions {
    string BuildUrl(int p)
    {
        var q = ViewBag.Query as string ?? "";
        var pageSize = (int)(ViewBag.PageSize ?? 10);
        var qs = new List<string>();
        if (!string.IsNullOrWhiteSpace(q)) qs.Add($"q={Uri.EscapeDataString(q)}");
        qs.Add($"page={p}");
        qs.Add($"pageSize={pageSize}");
        return "/Admin/Suppliers" + (qs.Count > 0 ? "?" + string.Join("&", qs) : "");
    }
}