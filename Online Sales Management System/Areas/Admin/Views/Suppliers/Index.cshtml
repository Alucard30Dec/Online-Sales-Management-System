@model List<OnlineSalesManagementSystem.Domain.Entities.Supplier>
@using Microsoft.AspNetCore.Authorization
@using OnlineSalesManagementSystem.Services.Security
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Suppliers";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    string q = ViewBag.Query as string ?? "";
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 10);
    int total = (int)(ViewBag.Total ?? 0);

    int totalPages = pageSize <= 0 ? 0 : (int)Math.Ceiling(total / (double)pageSize);
    bool hasPrev = page > 1;
    bool hasNext = page < totalPages;

    int start = (page - 1) * pageSize + (total == 0 ? 0 : 1);
    int end = Math.Min(page * pageSize, total);

    string BuildUrl(int p)
    {
        var qs = new List<string>();
        if (!string.IsNullOrWhiteSpace(q)) qs.Add($"q={Uri.EscapeDataString(q)}");
        qs.Add($"page={p}");
        qs.Add($"pageSize={pageSize}");
        return "/Admin/Suppliers" + (qs.Count > 0 ? "?" + string.Join("&", qs) : "");
    }

    bool canCreate = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Suppliers, PermissionConstants.Actions.Create))).Succeeded;
    bool canEdit = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Suppliers, PermissionConstants.Actions.Edit))).Succeeded;
    bool canDelete = (await AuthorizationService.AuthorizeAsync(User, PermissionConstants.Policies.Require(PermissionConstants.Modules.Suppliers, PermissionConstants.Actions.Delete))).Succeeded;
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h3 class="mb-0">Suppliers</h3>
        <div class="text-muted small">Showing @start to @end of @total entries</div>
    </div>
    <div class="d-flex gap-2">
        @if (canCreate)
        {
            <a class="btn btn-primary" href="/Admin/Suppliers/Create">
                <i class="bi bi-plus-lg me-1"></i> New Supplier
            </a>
        }
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form class="row g-2 align-items-end mb-3" method="get" action="/Admin/Suppliers">
            <div class="col-12 col-md-7 col-xl-8">
                <label class="form-label small text-muted">Search</label>
                <input class="form-control" name="q" value="@q" placeholder="Name, phone, email..." />
            </div>

            <div class="col-12 col-md-3 col-xl-2">
                <label class="form-label small text-muted">Show entries</label>
                <select class="form-select" name="pageSize">
                    @{
                        var sizes = new[] { 10, 25, 50, 100 };
                        foreach (var sizeVal in sizes)
                        {
                            var selected = (sizeVal == pageSize) ? "selected" : null;
                            <option value="@sizeVal" selected="@selected">@sizeVal</option>
                        }
                    }
                </select>
            </div>

            <div class="col-12 col-md-3 col-xl-2 d-flex gap-2">
                <button class="btn btn-outline-primary w-100" type="submit">Search</button>
                <a class="btn btn-outline-secondary w-100" href="/Admin/Suppliers">Reset</a>
            </div>

            <input type="hidden" name="page" value="1" />
        </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 90px;">#</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th class="text-end" style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No data</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.Id</td>
                                <td>@supplier.Name</td>
                                <td>@supplier.Phone</td>
                                <td>@supplier.Email</td>
                                <td>@supplier.Address</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        @if (canEdit)
                                        {
                                            <a class="btn btn-sm btn-outline-primary" href="/Admin/Suppliers/Edit/@supplier.Id">Edit</a>
                                        }
                                        <a class="btn btn-sm btn-outline-secondary" href="/Admin/Suppliers/Details/@supplier.Id">Details</a>
                                        @if (canDelete)
                                        {
                                            <a class="btn btn-sm btn-outline-danger" href="/Admin/Suppliers/Delete/@supplier.Id">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination mb-0">
                    <li class="page-item @(hasPrev ? "" : "disabled")">
                        <a class="page-link" href="@(hasPrev? BuildUrl(page - 1) : "#")">Prev</a>
                    </li>

                    @{
                        int startPage = Math.Max(1, page - 2);
                        int endPage = Math.Min(totalPages, page + 2);

                        for (int p = startPage; p <= endPage; p++)
                        {
                            <li class="page-item @(p == page ? "active" : "")">
                                <a class="page-link" href="@BuildUrl(p)">@p</a>
                            </li>
                        }
                    }

                    <li class="page-item @(hasNext ? "" : "disabled")">
                        <a class="page-link" href="@(hasNext? BuildUrl(page + 1) : "#")">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
